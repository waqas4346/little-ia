

{% assign block_settings = block.settings %}

{% liquid
  assign onboarding = false

  if article == blank
    assign onboarding = true
    # Assign placeholder variables
    assign display_title = 'placeholders.blog_post_title' | t
    assign display_author = 'placeholders.blog_post_author' | t
    assign display_date = 'placeholders.blog_post_date' | t
    assign display_description = 'placeholders.blog_post_description' | t
  else
    assign display_title = article.title
    assign display_author = article.author
    assign display_date = article.published_at
    assign display_description = null
  endif

  assign truncate_description = true
  if section.settings.layout_type == 'editorial'
    assign truncate_description = false
  endif

  # Map alignment values for flexbox
  assign flex_alignment = 'flex-start'
  if block_settings.alignment == 'center'
    assign flex_alignment = 'center'
  elsif block_settings.alignment == 'right'
    assign flex_alignment = 'flex-end'
  endif
%}

{% capture image %}
  {% content_for 'block',
    id: 'image',
    type: '_featured-blog-posts-image',
    image: article.image,
    parent_block_id: block.id
  %}
{% endcapture %}

{% capture title %}
  {% content_for 'block', id: 'title', type: '_heading', text: display_title %}
{% endcapture %}

{% capture details %}
  {% content_for 'block',
    id: 'blog-post-info-text',
    type: '_blog-post-info-text',
    alignment: block_settings.alignment,
    author: display_author,
    date: display_date
  %}
{% endcapture %}

{% capture description %}
  {% content_for 'block',
    id: 'blog-post-description',
    type: '_blog-post-description',
    article: article,
    show_read_more: false,
    should_truncate: truncate_description,
    onboarding_text: display_description
  %}
{% endcapture %}

<div
  class="
    featured-blog-posts-card spacing-style border-style
    {% if section.settings.layout_type == 'editorial' %}blog-post-card--flexible-aspect-ratio{% endif %}
    {% if block_settings.inherit_color_scheme == false %}color-{{ block_settings.color_scheme }}{% endif %}
  "
  data-block-id="{{ block.id }}"
  data-testid="featured-blog-posts-card"
  {% if onboarding %}
    data-placeholder="true"
  {% endif %}
  style="
    {%- render 'spacing-style', settings: block_settings -%}
    {%- render 'border-override', settings: block_settings -%}
    --text-align: {{ block_settings.alignment }};
    --horizontal-alignment: {{ flex_alignment }};
    --gap: {{ block_settings.gap }}px;
  "
  {{ block.shopify_attributes }}
>
  <a
    class="featured-blog-posts-card__link"
    {% unless onboarding %}
      href="{{ article.url }}"
    {% endunless %}
  >
    <span class="visually-hidden">{{ display_title }}</span>
  </a>

  <div class="featured-blog-posts-card__inner">
    {% if onboarding or article.image %}
      {{ image }}
    {% endif %}

    <div class="featured-blog-posts-card__content layout-panel-flex--column">
      <h4 class="featured-blog-posts-card__title" style="--horizontal-alignment: {{ flex_alignment }}; --text-align: {{ block_settings.alignment }};">{{ title }}</h4>
      {{ details }}
      {{ description }}
      {% if section.settings.layout_type == 'grid' and block_settings.show_read_now_link and block_settings.read_now_text != blank %}
        {% unless onboarding %}
          <a href="{{ article.url }}" class="featured-blog-posts-card__read-now-link">{{ block_settings.read_now_text }}</a>
        {% endunless %}
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .featured-blog-posts-card {
    width: 100%;
    position: relative;
    text-align: var(--text-align);
  }

  .featured-blog-posts-card__inner {
    width: 100%;
    overflow: hidden;
    position: relative;
    gap: var(--gap);
    display: flex;
    flex-direction: column;
    height: 100%;
    z-index: var(--layer-flat);
    pointer-events: none;
  }

  .resource-list--grid .resource-list__item {
    min-width: 0;
  }

  /* Editorial layout */
  .resource-list:not(.hidden--desktop) .blog-post-card--flexible-aspect-ratio {
    height: 100%;

    .featured-blog-posts-card__image,
    .blog-placeholder-svg {
      aspect-ratio: 99;
      height: 100%;
    }

    .featured-blog-posts-card__content {
      flex-shrink: 0;
      height: auto;
    }
  }

  @media (max-width: 768px) {
    .resource-list:not(.hidden--desktop) .blog-post-card--flexible-aspect-ratio {
      .featured-blog-posts-card__image,
      .blog-placeholder-svg {
        aspect-ratio: unset;
      }
    }
  }

  .featured-blog-posts-card__inner a,
  .featured-blog-posts-card__inner button {
    pointer-events: auto;
  }

  /* allow all blocks to be selectable in editor preview */
  .shopify-design-mode .featured-blog-posts-card__content * {
    pointer-events: auto;
  }

  .featured-blog-posts-card__content {
    position: relative;
    display: flex;
    height: 100%;
    width: 100%;
    gap: var(--gap);
    flex-direction: column;
    align-items: var(--horizontal-alignment);
  }

  .featured-blog-posts-card__link {
    position: absolute;
    inset: 0;
    border-radius: var(--border-radius);
  }

  .featured-blog-posts-card__title {
    margin: 0;
    width: 100%;
    text-align: var(--text-align);
    font-weight: 500;
  }

  /* Ensure the text-block inside respects the title's alignment */
  .featured-blog-posts-card__title .text-block {
    width: 100%;
    --width: 100%;
  }

  /* Ensure font weight applies to title content */
  .featured-blog-posts-card__title .text-block,
  .featured-blog-posts-card__title .text-block > * {
    font-weight: 500;
  }

  @media screen and (max-width: 749px) {
    .featured-blog-posts-card__title,
    .featured-blog-posts-card__title .text-block,
    .featured-blog-posts-card__title .text-block > * {
      font-size: 16px;
    }
  }

  /* Force text alignment on all child elements when center is selected */
  [style*="--text-align: center"] .featured-blog-posts-card__title,
  [style*="--text-align: center"] .featured-blog-posts-card__title .text-block,
  [style*="--text-align: center"] .featured-blog-posts-card__title .text-block > * {
    text-align: center !important;
  }

  [style*="--text-align: right"] .featured-blog-posts-card__title,
  [style*="--text-align: right"] .featured-blog-posts-card__title .text-block,
  [style*="--text-align: right"] .featured-blog-posts-card__title .text-block > * {
    text-align: right !important;
  }

  .featured-blog-posts-card__read-now-link {
    text-decoration: underline;
    color: var(--color-primary, var(--color-foreground));
    display: inline-block;
    pointer-events: auto;
    position: relative;
    z-index: calc(var(--layer-flat) + 1);
    font-weight: 500;
    text-transform: uppercase;
  }

  .featured-blog-posts-card__read-now-link:hover {
    color: var(--color-primary-hover, var(--color-primary, var(--color-foreground)));
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.blog_card",
  "settings": [
    {
      "type": "header",
      "content": "t:content.text"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:settings.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:options.left"
        },
        {
          "value": "center",
          "label": "t:options.center"
        },
        {
          "value": "right",
          "label": "t:options.right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_read_now_link",
      "label": "Show Read Now link",
      "default": false
    },
    {
      "type": "text",
      "id": "read_now_text",
      "label": "Read Now link text",
      "default": "Read Now"
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "select",
      "id": "border",
      "label": "t:settings.borders",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "solid",
          "label": "t:options.solid"
        }
      ],
      "default": "none"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 10,
      "step": 0.5,
      "unit": "px",
      "label": "t:settings.border_width",
      "default": 1,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_opacity",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:settings.opacity",
      "default": 100,
      "visible_if": "{{ block.settings.border != 'none' }}"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "t:settings.border_radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "t:settings.left",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "t:settings.right",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ]
}
{% endschema %}
