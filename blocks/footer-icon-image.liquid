
{% liquid
  assign block_settings = block.settings
  assign icon_block_class = 'footer-icon-image__icon icon-block-' | append: block.id
%}

<div
  class="footer-icon-image spacing-style"
  style="{% render 'spacing-style', settings: block_settings %}"
  {{ block.shopify_attributes }}
>
  {% if block_settings.icon != 'none' or block_settings.image_upload != blank %}
    <div class="footer-icon-image__icon-wrapper">
      {% render 'icon-or-image',
        icon: block_settings.icon,
        image_upload: block_settings.image_upload,
        width: block_settings.icon_width,
        class_name: icon_block_class
      %}
    </div>
  {% endif %}

  {% if block_settings.image != blank %}
    <div class="footer-icon-image__image-wrapper{% if block_settings.hide_image_on_mobile %} footer-icon-image__image-wrapper--hide-mobile{% endif %}">
      {% liquid
        assign media_width_desktop = '100vw'
        assign media_width_mobile = '100vw'
        assign sizes = 'auto, (min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
        assign widths = '240, 352, 832, 1200, 1600, 1920'
      %}

      {{
        block_settings.image
        | image_url: width: 1920
        | image_tag:
          width: block_settings.image.width,
          widths: widths,
          height: block_settings.image.height,
          class: 'footer-icon-image__image',
          sizes: sizes
      }}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .footer-icon-image {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--gap-md, 16px);
  }

  .footer-icon-image__icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-icon-image__image-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-icon-image__image {
    width: 100%;
    height: auto;
    max-width: 100%;
  }

  .footer-icon-image__image-wrapper--hide-mobile {
    @media screen and (max-width: 749px) {
      display: none;
    }
  }
{% endstylesheet %}

