      "label": "Sub heading"
    },
    {
      "type": "text",
      "id": "links_text",
      "label": "Links text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "category": "t:categories.basic"
    }
  ]
}
{% endschema %}

