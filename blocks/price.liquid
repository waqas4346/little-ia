{% stylesheet %}
  .tax-note:empty {
    display: none;
  }

  form.payment-terms {
    padding-top: 0.5em;
    font-size: min(0.85em, var(--font-paragraph--size));
    font-weight: var(--font-paragraph--weight);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  .installments:not(:has(shopify-payment-terms)) {
    display: none;
  }

  /* Volume pricing note should match unit-price styling (small, grey text) */
  product-price .volume-pricing-note,
  product-price.text-block:is(.h1, .h2, .h3, .h4, .h5, .h6) .volume-pricing-note {
    display: block;
    font-family: var(--font-body--family);
    font-weight: normal;
    font-size: var(--font-size--xs);
    line-height: normal;
    letter-spacing: normal;
    text-transform: none;
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  /* Collection product actions (View Product + Quick Add) */
  .collection-product-actions {
    display: flex !important;
    align-items: center !important;
    gap: 5px !important;
    margin-top: 12px;
    position: relative;
    z-index: 10;
    width: 100%;
  }

  .collection-view-product-button {
    background: #7295BB;
    border: 1px solid #7295BB;
    flex: 1;
    padding: 10px 10px;
    margin: 0;
    margin-right: 0;
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    text-transform: uppercase;
    color: #FFFFFF;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease, color 0.2s ease, border 0.2s ease;
  }

  .collection-view-product-button:hover {
    background: white;
    border: 1px solid #7295BB;
    color: #7295BB;
  }

  @media screen and (min-width: 750px) {
    .collection-product-actions {
      gap: 5px !important;
      align-items: center;
    }

    .collection-view-product-button {
      background: #7295BB;
      flex: 1;
      padding: 14px 20px;
      margin: 0;
      font-family: 'Outfit', sans-serif;
      font-style: normal;
      font-weight: 500;
      font-size: 16px;
      line-height: 140%;
      text-transform: uppercase;
      color: #FFFFFF;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.2s ease, color 0.2s ease, border 0.2s ease;
    }

    .collection-view-product-button:hover {
      background: white;
      border: 1px solid #7295BB;
      color: #7295BB;
    }

    .collection-quick-add-button {
      position: relative !important;
      left: auto !important;
      right: auto !important;
      top: auto !important;
      bottom: auto !important;
    }
  }

  .collection-quick-add {
    position: relative !important;
    inset: unset !important;
    top: unset !important;
    right: unset !important;
    bottom: unset !important;
    left: unset !important;
    width: auto !important;
    height: auto !important;
    pointer-events: all;
    z-index: auto !important;
  }

  /* Wrapper for quick-add to prevent navigation */
  .collection-product-actions > div {
    display: flex !important;
    align-items: center !important;
    flex-shrink: 0 !important;
    margin: 0 !important;
    position: relative !important;
    width: 32px;
  }

  @media screen and (min-width: 750px) {
    .collection-product-actions > div {
      width: 32px;
    }
  }

  /* Hide "Add" button in collection quick add, only show "Choose" button (+) */
  .collection-quick-add .quick-add__button--add {
    display: none !important;
  }

  .collection-quick-add .quick-add__button--choose {
    display: flex !important;
    position: relative !important;
    right: unset !important;
    bottom: unset !important;
    left: unset !important;
    top: unset !important;
    opacity: 1 !important;
    visibility: visible !important;
    margin: 0 !important;
    transform: none !important;
    translate: none !important;
  }

  /* Ensure the button is visible - override base quick-add styles */
  .collection-quick-add-button,
  .collection-quick-add .quick-add__button--choose.collection-quick-add-button,
  .collection-quick-add .collection-quick-add-button,
  .collection-quick-add .quick-add__button.collection-quick-add-button,
  button.collection-quick-add-button {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
    width: 32px !important;
    height: 32px !important;
    max-width: 32px !important;
    max-height: 32px !important;
    --quick-add-mobile-display: flex !important;
    --quick-add-display: flex !important;
    --quick-add-mobile-opacity: 1 !important;
  }

  .collection-quick-add .quick-add__product-form-component {
    position: relative !important;
    height: auto !important;
  }

  .collection-quick-add .quick-add__product-form-component .shopify-product-form {
    position: relative !important;
    display: flex !important;
    justify-content: flex-start !important;
    align-items: center !important;
    height: auto !important;
    width: auto !important;
  }

  /* Override all quick-add base styles for collection */
  .collection-product-actions .collection-quick-add.quick-add {
    position: relative !important;
    inset: unset !important;
    top: unset !important;
    right: unset !important;
    bottom: unset !important;
    left: unset !important;
    width: auto !important;
    height: auto !important;
    min-width: auto !important;
    min-height: auto !important;
    max-width: none !important;
    max-height: none !important;
  }

  .collection-product-actions .collection-quick-add .quick-add__button {
    position: relative !important;
    right: unset !important;
    bottom: unset !important;
    left: unset !important;
    top: unset !important;
    margin: 0 !important;
    transform: none !important;
    translate: none !important;
  }

  .collection-quick-add-button {
    width: 32px !important;
    height: 32px !important;
    min-width: 32px !important;
    min-height: 32px !important;
    max-width: 32px !important;
    max-height: 32px !important;
    padding: 0 !important;
    margin: 0 !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    opacity: 1 !important;
    visibility: visible !important;
    border-radius: 50% !important;
    border: 1px solid #1D425A !important;
    background: transparent !important;
    cursor: pointer !important;
    transition: opacity 0.2s ease;
    position: relative !important;
    z-index: 1 !important;
    pointer-events: auto !important;
    flex-shrink: 0 !important;
    left: unset !important;
    right: unset !important;
    top: unset !important;
    bottom: unset !important;
    transform: none !important;
    translate: none !important;
    backdrop-filter: none !important;
    box-sizing: border-box !important;
    overflow: visible !important;
  }

  .collection-quick-add-button:hover {
    opacity: 0.8;
  }

  .collection-quick-add-plus {
    font-family: 'Geologica', sans-serif;
    font-style: normal;
    font-weight: 100;
    font-size: 19.5279px;
    line-height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #1D425A;
    margin: 0;
    padding: 0;
    height: 100%;
    width: 100%;
    position: relative;
    top: -1px;
  }

  @media screen and (min-width: 750px) {
    .collection-product-actions {
      align-items: center;
    }

    .collection-quick-add-button {
      width: 32px !important;
      height: 32px !important;
      min-width: 32px !important;
      min-height: 32px !important;
      max-width: 32px !important;
      max-height: 32px !important;
      border: 1px solid #7295BB !important;
      padding: 0 !important;
      margin: 0 !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
      opacity: 1 !important;
      visibility: visible !important;
      box-sizing: border-box !important;
    }
    
    .collection-quick-add-plus {
      font-size: 29.4042px;
      line-height: 37px;
      color: #7295BB;
      top: -2px;
    }
  }

  /* Product Price Bullet Points */
  .product-price__bulletpoints {
    width: 100%;
    margin-top: 12px;
  }

  .product-price__bulletpoints-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding-inline-start: 0 !important;
  }

  .product-price__bulletpoint-item {
    display: flex;
    align-items: flex-start;
    gap: 4px;
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
  }

  .product-price__bulletpoint-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 4px;
  }

  .product-price__bulletpoint-icon-img {
    width: 17px;
    height: 17px;
    display: block;
    flex-shrink: 0;
  }

  .product-price__bulletpoint-text {
    flex: 1;
  }

  @media screen and (min-width: 750px) {
    .product-price__bulletpoint-item {
      gap: 8px;
    }
    .product-price__bulletpoints {
      margin-top: 26px;
    }
  }
