

{%- liquid
  assign block_settings = block.settings
  assign product_resource = closest.product
  assign selected_variant = product_resource.selected_or_first_available_variant
-%}

{% liquid
  if block_settings.type_preset == 'rte' or block_settings.type_preset == 'paragraph'
    assign is_rte = true
  endif

  capture text_block_classes
    if block_settings.width == '100%'
      echo 'text-block--align-' | append: block_settings.alignment
      if block_settings.max_width == 'none'
        echo ' text-block--full-width'
      endif
    endif
    if block_settings.type_preset == 'custom'
      echo ' custom-typography'
      if block_settings.font_size != ''
        echo ' custom-font-size'
      endif
      if block_settings.color != ''
        echo ' custom-color'
      endif
    endif
    if block_settings.background
      echo ' text-block--background'
    endif
    if is_rte
      echo ' rte'
    endif
  endcapture
%}

<product-price
  class="text-block {{ text_block_classes }} text-{{ block_settings.alignment }} {{ block_settings.type_preset | default: 'paragraph' }} spacing-style"
  data-block-id="{{ block.id }}"
  data-product-id="{{ product_resource.id }}"
  style="
    {% render 'typography-style', settings: block_settings %}
    {% render 'spacing-style', settings: block_settings %}
    --width: {{ block_settings.width }};
  "
  {{ block.shopify_attributes }}
>
  {% render 'price',
    show_unit_price: true,
    product_resource: product_resource,
    show_sale_price_first: block_settings.show_sale_price_first
  %}

  {% comment %} Product Bullet Points from CB - Bullet metafield {% endcomment %}
  {% liquid
    assign bullet_points = blank
    if product_resource != blank
      # Access metafield: custom.bullet (metaobject: CB - Product bullets, field: Bullet Points)
      assign bullet_metafield = product_resource.metafields.custom.bullet
      
      if bullet_metafield != blank
        # Get the metaobject value (CB - Product bullets)
        assign bullet_metaobject = bullet_metafield.value
        
        if bullet_metaobject != blank
          # Get the Bullet Points list from the metaobject
          # Field name is "Bullet Points" - try different access methods
          assign bullet_points = bullet_metaobject.bullet_points.value | default: bullet_metaobject.bullet_points
          
          # If still blank, try with brackets
          if bullet_points == blank
            assign bullet_points = bullet_metaobject['Bullet Points'].value | default: bullet_metaobject['Bullet Points']
          endif
        endif
      endif
    endif
  %}


  {% if bullet_points != blank and bullet_points.size > 0 %}
    <div class="product-price__bulletpoints">
      <ul class="product-price__bulletpoints-list">
        {% for bulletpoint in bullet_points %}
          <li class="product-price__bulletpoint-item">
            <span class="product-price__bulletpoint-icon">
              <img src="{{ 'star-bullet-icon-pink.png' | asset_url }}" alt="" class="product-price__bulletpoint-icon-img">
            </span>
            <span class="product-price__bulletpoint-text">
              {% if bulletpoint.value != blank %}
                {{ bulletpoint.value }}
              {% else %}
                {{ bulletpoint }}
              {% endif %}
            </span>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  {% comment %} Add View Product and + buttons for collection pages {% endcomment %}
  {% if template.name == 'collection' %}
    {% liquid
      assign has_quick_add = false
      if settings.quick_add and product_resource.available
        assign has_quick_add = true
      endif
      assign variant = product_resource.selected_or_first_available_variant
      assign product_form_id = 'CollectionQuickAdd-ProductForm-' | append: product_resource.id | append: '-' | append: block.id
      # Always show "Quick Add" button that opens the popup, even for single-variant products
      assign quick_add_button = 'choose'
    %}
    <div class="collection-product-actions" onclick="event.stopPropagation();">
      <a 
        href="{{ variant.url | default: product_resource.url }}" 
        class="collection-view-product-button"
        onclick="event.stopPropagation();"
      >
        VIEW PRODUCT
      </a>
      {% if has_quick_add %}
        <div onclick="event.stopPropagation();" style="display: flex; align-items: center;">
          <quick-add-component
            class="quick-add collection-quick-add"
            ref="quickAdd"
            data-product-title="{{ product_resource.title }}"
            data-quick-add-button="{{ quick_add_button }}"
            data-product-options-count="{{ product_resource.options.size }}"
          >
          <product-form-component
            data-section-id="{{ section.id | default: 'collection' }}"
            data-product-id="{{ product_resource.id }}"
            on:submit="/handleSubmit"
            class="quick-add__product-form-component"
          >
            {%- form 'product', product_resource, id: product_form_id, novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
              <input
                type="hidden"
                name="id"
                ref="variantId"
                value="{{ variant.id }}"
                {% if variant.available == false %}
                  disabled
                {% endif %}
              >
              <input
                type="hidden"
                name="quantity"
                value="{% if variant.quantity_rule.min %}{{ variant.quantity_rule.min }}{% else %}1{% endif %}"
              >
              <button
                class="button collection-quick-add-button"
                type="button"
                name="add"
                on:click="quick-add-component/handleClick"
                onclick="event.preventDefault(); event.stopPropagation(); event.stopImmediatePropagation();"
                data-quick-add-trigger="true"
                data-no-navigation="true"
              >
                <span class="collection-quick-add-plus">+</span>
              </button>
            {%- endform -%}
          </product-form-component>
        </quick-add-component>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if block_settings.show_tax_info %}
    <div class="tax-note">
      {%- if cart.duties_included and cart.taxes_included -%}
        {{ 'content.duties_and_taxes_included' | t }}
      {%- elsif cart.taxes_included -%}
        {{ 'content.taxes_included' | t }}
      {%- elsif cart.duties_included -%}
        {{ 'content.duties_included' | t }}
      {%- endif -%}

      {%- if shop.shipping_policy.body != blank -%}
        {{ 'content.shipping_policy' | t }}
      {%- endif -%}
    </div>
  {% endif %}

  {%- if selected_variant != blank and block_settings.show_installments -%}
    <div class="installments">
      {%- assign product_form_installment_id = 'product-form-installment-' | append: block.id -%}
      {%- form 'product', product_resource, id: product_form_installment_id, class: 'payment-terms' -%}
        <input
          type="hidden"
          name="id"
          value="{{ selected_variant.id }}"
        >
        {{ form | payment_terms }}
      {%- endform -%}
    </div>
  {%- endif -%}
</product-price>

