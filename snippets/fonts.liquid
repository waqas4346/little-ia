{% # theme-check-disable %}
{% comment %} Google Fonts preconnect {% endcomment %}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
{% comment %} Google Fonts: Outfit with all weights (100-900) {% endcomment %}
{%- if settings.type_body_font.family == 'Outfit' or settings.type_subheading_font.family == 'Outfit' or settings.type_heading_font.family == 'Outfit' or settings.type_accent_font.family == 'Outfit' -%}
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
{%- endif -%}
{% comment %} Adobe Fonts: Futura PT (fallback to Outfit if not available) {% endcomment %}
{% comment %} Note: Futura PT should be loaded via Adobe Fonts or theme settings. Outfit is used as fallback. {% endcomment %}
{%- unless settings.type_body_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_body_font | font_url }}"
    type="font/woff2"
    crossorigin
    fetchpriority="low"
  >
{%- endunless -%}
{%- unless settings.type_subheading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_subheading_font | font_url }}"
    type="font/woff2"
    crossorigin
    fetchpriority="low"
  >
{%- endunless -%}
{%- unless settings.type_heading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_heading_font | font_url }}"
    type="font/woff2"
    crossorigin
    fetchpriority="low"
  >
{%- endunless -%}
{%- unless settings.type_accent_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_accent_font | font_url }}"
    type="font/woff2"
    crossorigin
    fetchpriority="low"
  >
{%- endunless -%}
{% # theme-check-enable %}
