{%- doc -%}
  Renders a custom mega menu for "Shop by Theme" with image swatches only.

  @param {object} [section] - The section object.
  @param {linklist} [parent_link] - The linklist to render
  @param {string} [id] - Unique ID to assign ul in markup
  @param {number} [image_border_radius] - The border radius used for the content images
{%- enddoc -%}

<div class="mega-menu mega-menu--theme section section--full-width-margin section--{{ section.settings.section_width }}">
  <div
    class="mega-menu__grid mega-menu__grid--theme"
    data-menu-grid-id="{{ id }}"
  >
    {%- comment -%} Image Swatches Section {%- endcomment -%}
    <div class="mega-menu__theme-swatches">
      <ul class="mega-menu__theme-swatches-list list-unstyled">
        {% for link in parent_link.links %}
          <li class="mega-menu__theme-swatch-item">
            <a
              href="{{ link.url }}"
              class="mega-menu__theme-swatch-link"
              aria-label="{{ link.title }}"
            >
              {%- comment -%} Render collection image or fallback {%- endcomment -%}
              <div class="mega-menu__theme-swatch-image-wrapper">
                {% liquid
                  assign collection_image = null
                  assign collection_object = null
                  
                  if link.type == 'collection_link'
                    assign collection_object = link.object
                    
                    # Try to get collection directly if link.object doesn't work
                    if collection_object == blank
                      assign collection_handle = link.url | split: '/' | last | split: '?' | first
                      assign collection_object = collections[collection_handle]
                    endif
                    
                    # Check for featured_image first
                    if collection_object.featured_image
                      assign collection_image = collection_object.featured_image
                    # Check for image property
                    elsif collection_object.image
                      assign collection_image = collection_object.image
                    # Fallback to first product image
                    elsif collection_object.products.size > 0
                      for product in collection_object.products
                        if product.featured_image
                          assign collection_image = product.featured_image
                          break
                        endif
                      endfor
                    endif
                  endif
                %}
                
                {% if collection_image %}
                  {{
                    collection_image
                    | image_url: width: 200
                    | image_tag: 
                      loading: 'lazy', 
                      class: 'mega-menu__theme-swatch-image',
                      sizes: '200px',
                      style: 'border-radius: 100px;'
                  }}
                {% else %}
                  <div 
                    class="mega-menu__theme-swatch-placeholder"
                    style="border-radius: 100px;"
                  ></div>
                {% endif %}
              </div>
              <span class="mega-menu__theme-swatch-title">{{ link.title }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% style %}
  .mega-menu--theme {
    --theme-swatch-size: 100px;
    --theme-swatch-gap: var(--gap-lg);
  }

  .mega-menu__grid--theme {
    display: block;
  }

  .mega-menu__theme-swatches {
    width: 100%;
  }

  .mega-menu__theme-swatches-list {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    column-gap: 101px;
    row-gap: 44px;
    justify-items: center;
    max-width: 1105px;
    margin: 0 auto;
  }

  .mega-menu__theme-swatch-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .mega-menu__theme-swatch-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    transition: transform var(--animation-speed) var(--animation-easing);
  }

  .mega-menu__theme-swatch-link:hover {
    transform: translateY(-4px);
  }

  .mega-menu__theme-swatch-image-wrapper {
    width: var(--theme-swatch-size);
    height: var(--theme-swatch-size);
    border-radius: 100px;
    border: 1.49px solid #0000000A;
    overflow: hidden;
    margin-bottom: var(--padding-xs);
    position: relative;
  }

  .mega-menu__theme-swatch-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .mega-menu__theme-swatch-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-foreground-muted);
    opacity: 0.1;
  }

  .mega-menu__theme-swatch-title {
    font-family: var(--font-outfit--family);
    font-weight: 500;
    font-size: 16px;
    line-height: 160%;
    letter-spacing: 0%;
    text-transform: uppercase;
    color: #1D425A;
    text-align: center;
  }

  /* Mobile drawer styles */
  .menu-drawer__theme-swatches .mega-menu--theme {
    --theme-swatch-size: 78px;
  }

  .menu-drawer__theme-swatches .mega-menu__theme-swatches-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 31px;
    row-gap: 26px;
    padding-left: 0;
    padding-right: 0;
    max-width: none;
    margin: 0;
  }

  .menu-drawer__theme-swatches .mega-menu__theme-swatch-title {
    font-size: 12px;
    line-height: 160%;
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .menu-drawer__theme-swatches .mega-menu__theme-swatches-list {
      grid-template-columns: repeat(4, 1fr);
    }
    
    .menu-drawer__theme-swatches .mega-menu--theme {
      --theme-swatch-size: 100px;
    }
    
    .menu-drawer__theme-swatches .mega-menu__theme-swatch-title {
      font-size: 16px;
    }
  }

  @media screen and (min-width: 990px) {
    .mega-menu__theme-swatches-list {
      grid-template-columns: repeat(6, 1fr);
      column-gap: 101px;
      row-gap: 44px;
    }
    
    .mega-menu--theme {
      --theme-swatch-size: 100px;
    }
  }
{% endstyle %}

