  /* Right Section: Form */
  .personalise-modal__form {
    flex: 0 0 46.09%; /* 530px / 1150px = 46.09% for proportional scaling */
    display: flex;
    flex-direction: column;
    padding-left: 20px; 
    overflow-y: auto;
  }

  /* At 1150px modal width, form should be exactly 530px */
  @media screen and (min-width: 1440px) {
    .personalise-modal__form {
      flex: 0 0 530px;
    }
  }

