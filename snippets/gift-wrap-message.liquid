{%- doc -%}
  Renders gift wrap and gift message section for product page.
  Based on GIFT_MESSAGE_AND_WRAP_SYSTEM.md documentation.

  @param {object} product - The product object
  @param {object} form - The product form object
  @param {string} product_form_id - The product form ID
{%- enddoc -%}

{% liquid
  assign product = product | default: closest.product
  assign form_id = product_form_id | default: form.id | default: 'product-form'
  assign show_gift_wrap = false
  assign show_christmas_gift = false
  assign show_gift_message = false
  
  if product.tags contains 'custom_gift_wrap'
    assign show_gift_wrap = true
    assign gift_product = all_products['gift-wrap']
  endif
  
  if product.tags contains 'christmas_gift'
    assign show_christmas_gift = true
    assign christmas_product = all_products['christmas-gift-wrap']
  endif
  
  if product.tags contains 'gift_message'
    assign show_gift_message = true
    assign show_gift_wrap = true
    assign gift_product = all_products['gift-wrap']
  endif
%}

{% if show_gift_wrap or show_christmas_gift or show_gift_message %}
  <div class="gift-wrap-message-section">
    {% if show_gift_wrap and gift_product %}
      <div class="gift-wrap-option">
        <div class="gift-wrap-option__header">
          <div class="checkbox-image-container">
          <input 
            type="checkbox" 
            id="chkAddGift" 
            class="gift-wrap-option__checkbox chk_add_gift" 
            value="{{ gift_product.selected_or_first_available_variant.id }}" 
            data-product-id="{{ product.id }}"
            form="{{ form_id }}"
          >
          {% if gift_product.media.size > 0 %}
            <div class="gift-wrap-option__image-slider">
              <div class="gift-wrap-option__image-track">
                {% for media in gift_product.media limit: 5 %}
                  {% if media.media_type == 'image' %}
                    <div class="gift-wrap-option__image">
                      {{
                        media.preview_image
                        | image_url: width: 200
                        | image_tag: loading: 'lazy', alt: gift_product.title, class: 'gift-wrap-option__img'
                      }}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
          <label for="chkAddGift" class="gift-wrap-option__label">
            <div class="gift-wrap-option__text">
              <span class="gift-wrap-option__title">Add Gift Wrap</span>
              <span class="gift-wrap-option__price">(+{{ gift_product.price | money }})</span>
            </div>
            <p class="gift-wrap-option__description">
              Comes in a beautiful designed box, perfect for gifting.
            </p>
          </label>
        </div>
      </div>
    {% endif %}

    {% if show_christmas_gift and christmas_product %}
      <div class="gift-wrap-option christmas-gift-wrap">
        <div class="gift-wrap-option__header">
          <div class="checkbox-image-container">
          <input 
            type="checkbox" 
            id="christmas_chkAddGift" 
            class="gift-wrap-option__checkbox christmas-chk_add_gift" 
            value="{{ christmas_product.selected_or_first_available_variant.id }}" 
            data-product-id="{{ product.id }}"
            form="{{ form_id }}"
          >
          {% if christmas_product.media.size > 0 %}
            <div class="gift-wrap-option__image-slider">
              <div class="gift-wrap-option__image-track">
                {% for media in christmas_product.media limit: 5 %}
                  {% if media.media_type == 'image' %}
                    <div class="gift-wrap-option__image">
                      {{
                        media.preview_image
                        | image_url: width: 200
                        | image_tag: loading: 'lazy', alt: christmas_product.title, class: 'gift-wrap-option__img'
                      }}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
          <label for="christmas_chkAddGift" class="gift-wrap-option__label">
            <div class="gift-wrap-option__text">
              <span class="gift-wrap-option__title">Add {{ christmas_product.title }}</span>
              <span class="gift-wrap-option__price">({{ christmas_product.price | money }})</span>
            </div>
            <p class="gift-wrap-option__description">
              Comes in a beautiful designed box, perfect for gifting.
            </p>
          </label>
        </div>
      </div>
    {% endif %}

    {% if show_gift_message %}
      <div class="gift-message-section">
        <div class="gift-message-section__input-wrapper">
          <input
            type="text"
            id="gift-message-input"
            name="properties[Gift Message]"
            class="gift-message-section__input"
            placeholder="Enter a Gift Message"
            maxlength="300"
            form="{{ form_id }}"
            {% comment %} required {% endcomment %}
          >
          <button
            type="button"
            class="gift-message-section__done-button"
            onclick="this.closest('.gift-message-section').classList.add('gift-message-section--completed')"
          >
            DONE
          </button>
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}

<script src="{{ 'gift-wrap-handler.js' | asset_url }}" defer></script>

{% stylesheet %}
  .gift-wrap-message-section {
    margin-top: 4px;
    padding: 10px;
    background-color: #F9F9F9;
    border-radius: 0;
  }

  .gift-wrap-option {
    margin-block-end: 16px;
  }

  .gift-wrap-option:last-of-type {
    margin-block-end: 0;
  }

  .gift-wrap-option__header {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .gift-wrap-option__header .checkbox-image-container {
    display: flex;
    gap: 12px;
  }

  .gift-wrap-option__checkbox {
    width: 26px;
    height: 26px;
    margin: 0;
    margin-block-start: 2px;
    cursor: pointer;
    accent-color: #7295BB;
    flex-shrink: 0;
    border: 1.5px solid #7295BB !important;
    border-radius: 0px;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    background-color: #FFFFFF;
    box-sizing: border-box;
  }

  .gift-wrap-option__checkbox:checked {
    background-color: #7295BB;
    border-color: #7295BB !important;
    background-image: url("data:image/svg+xml,%3Csvg width='16' height='16' viewBox='0 0 16 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M13.3333 4L6 11.3333L2.66667 8' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
    background-size: 16px 16px;
  }

  .gift-wrap-option__image-slider {
    width: 93px;
    height: 93px;
    overflow-x: auto;
    overflow-y: hidden;
    border-radius: 0;
    background-color: #FFFFFF;
    flex-shrink: 0;
    scrollbar-width: thin;
    scrollbar-color: #7295BB #F0F0F0;
  }

  .gift-wrap-option__image-slider::-webkit-scrollbar {
    height: 6px;
  }

  .gift-wrap-option__image-slider::-webkit-scrollbar-track {
    background: #F0F0F0;
    border-radius: 3px;
  }

  .gift-wrap-option__image-slider::-webkit-scrollbar-thumb {
    background: #7295BB;
    border-radius: 3px;
  }

  .gift-wrap-option__image-slider::-webkit-scrollbar-thumb:hover {
    background: #5a7a9a;
  }

  .gift-wrap-option__image-track {
    display: flex;
    gap: 4px;
    height: 100%;
  }

  .gift-wrap-option__image {
    width: 93px;
    height: 93px;
    flex-shrink: 0;
    overflow: hidden;
  }

  .gift-wrap-option__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gift-wrap-option__label {
    display: flex;
    flex-direction: column;
    gap: 10px;
    cursor: pointer;
    flex: 1;
  }

  .gift-wrap-option__title {
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
    font-style: normal;
    font-size: 18px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #1D425A;
    margin: 0;
  }

  .gift-wrap-option__price {
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
    font-style: normal;
    font-size: 14px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #1D425A;
    margin: 0;
  }

  .gift-wrap-option__description {
    font-size: 14px;
    font-weight: 400;
    color: #666;
    line-height: 1.5;
    font-family: 'Outfit', sans-serif;
    margin: 0;
  }

  .gift-message-section {
    margin-block-start: 16px;
  }

  .gift-message-section__input-wrapper {
    display: flex;
    gap: 8px;
    align-items: center;
    position: relative;
  }

  .gift-message-section__input {
    flex: 1;
    padding: 12px 16px;
    border: 1px solid #D0D0D0;
    border-radius: 0;
    font-size: 14px;
    font-family: 'Outfit', sans-serif;
    font-weight: 400;
    background-color: #FFFFFF;
    color: var(--color-foreground, #000);
    transition: border-color 0.2s ease;
    line-height: 1.56;
    min-height: 44px;
    box-sizing: border-box;
  }

  .gift-message-section__input:focus {
    outline: none;
    border-color: #7295BB;
  }

  .gift-message-section__input::placeholder {
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.56;
    color: #797979;
  }

  .gift-message-section__done-button {
    position: absolute;
    right: 0;
    width: auto !important;
    color: #7295BB;
    border: none;
    font-weight: 500;
    font-size: 14px;
    font-family: 'Outfit', sans-serif;
    text-transform: uppercase;
    cursor: pointer;
    white-space: nowrap;
    flex-shrink: 0;
    box-sizing: border-box;
    letter-spacing: 0.5px;
    padding: 12px 20px;
    background: none;
    min-height: 44px;
  }

  .gift-message-section__done-button:hover {
    opacity: 0.8;
  }

  .gift-message-section--completed .gift-message-section__input {
    border-color: #7295BB;
    background-color: #F4F9FF;
  }

  @media screen and (max-width: 749px) {
    .gift-wrap-message-section {
      margin-top: 20px;
      margin-bottom: 0;
      padding: 10px;
    }

    .gift-wrap-option__image-slider {
      width: 70px;
      height: 70px;
    }

    .gift-wrap-option__image {
      width: 70px;
      height: 70px;
    }

    .gift-message-section__input-wrapper {
      flex-direction: row;
      align-items: center;
    }

    .gift-message-section__done-button {
      width: auto;
    }
  }
{% endstylesheet %}

