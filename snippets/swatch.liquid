{% if swatch == blank %}
<div class="swatch error">
  <p>You must include the snippet swatch.liquid with the name of a product option.</p> 
  <p>Use: <code>{% raw %}{% include 'swatch' with 'name of your product option here' %}{% endraw %}</code></p>
  <p>Example: <code>{% raw %}{% include 'swatch' with 'Color' %}{% endraw %}</code></p>
</div>
{% else %}

{% assign first_opt_select = true %}
{% assign found_option = false %}
{% assign is_color = false %}
{% assign option_index = 0 %}

{% for option in product.options %}
  {% if option == swatch %}
    {% assign found_option = true %}
    {% assign option_index = forloop.index0 %}
    <style>
      label[for="product-select-option-{{ option_index }}"] { display: none; }
      #product-select-option-{{ option_index }} { display: none; }
      #product-select-option-{{ option_index }} + .custom-style-select-box { display: none !important; }
    </style>
    {% assign downcased_option = swatch | downcase %}
    {% if downcased_option contains 'color' or downcased_option contains 'colour' %}
      {% assign is_color = true %}
    {% endif %}
  {% endif %}
{% endfor %}

{% unless found_option %}
<div class="swatch error">
  <p>You included the snippet swatch.liquid with the name of a product option — <code>'{{ swatch }}'</code> — that does not belong to your product.</p>
</div>
{% else %}
<div class="swatch clearfix" data-option-index="{{ option_index }}">
  <div class="header">{{ swatch }} <span class="red_stars">*</span></div>

  {% assign values = '' %}

  {% for variant in product.variants %}
    {% assign value = variant.options[option_index] %}

    {% unless values contains value %}
      {% assign value_available = false %}
      {% assign image_for_value = '' %}

      {% for v in product.variants %}
        {% if v.options[option_index] == value %}
          {% if v.available %}
            {% assign value_available = true %}
          {% endif %}
          {% if image_for_value == '' and v.image %}
            {% assign image_for_value = v.image %}
          {% endif %}
        {% endif %}
      {% endfor %}

      <div data-value="{{ value | escape }}" class="swatch-element {% if is_color %}color {% endif %}{{ value | handle }} {% if value_available %}available{% else %}soldout{% endif %}" data-slide="{{ forloop.index }}">
        {% if is_color %}
          <div class="tooltip">{{ value }}</div>
        {% endif %}

        <input id="swatch-{{ option_index }}-{{ value | handle }}" type="radio" name="option-{{ option_index }}" value="{{ value | escape }}"{% if first_opt_select == true %} checked{% endif %}/>

        {% if is_color %}
          <label for="swatch-{{ option_index }}-{{ value | handle }}" {% if image_for_value != '' %} style="background-image: url({{ image_for_value | img_url: '1024x' }}); background-repeat: no-repeat; background-position: 50% 50%; background-size: cover;" {% endif %}>
            {% unless value_available %}
              <div class="sold_out_icon">
                <svg height="35" width="35">
                  <line x1="0" y1="0" x2="200" y2="200" style="stroke:#a9a6a6;stroke-width:2" />
                </svg>
              </div>
            {% endunless %}
          </label>
        {% else %}
          <label for="swatch-{{ option_index }}-{{ value | handle }}" {% unless value_available %} class="sold_out_icon"{% endunless %}>
            {{ value }}
          </label>
        {% endif %}
      </div>

      {% assign values = values | append: '||' | append: value %}
      {% assign first_opt_select = false %}
    {% endunless %}
  {% endfor %}

</div>

{%- comment -%} JSON with all variant data for JS {%- endcomment -%}
<script type="application/json" id="variant-data">
  {{ product.variants | json }}
</script>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const variants = JSON.parse(document.getElementById("variant-data").textContent);

  function updateSizeSwatches(selectedColor) {
    const sizeSwatches = document.querySelectorAll('.swatch[data-option-index="1"] .swatch-element');
    sizeSwatches.forEach(el => {
      const sizeValue = el.getAttribute("data-value");

      const availableForThisSize = variants.some(v =>
        v.option1 === selectedColor && v.option2 === sizeValue && v.available
      );

      if (availableForThisSize) {
        el.classList.add("available");
        el.classList.remove("soldout");
        el.querySelector("label").classList.remove("sold_out_icon");
      } else {
        el.classList.remove("available");
        el.classList.add("soldout");
        el.querySelector("label").classList.add("sold_out_icon");
      }
    });
  }

  // Listen for color selection
  document.querySelectorAll('.swatch[data-option-index="0"] input[type="radio"]').forEach(el => {
    el.addEventListener("change", function() {
      const selectedColor = this.value;
      updateSizeSwatches(selectedColor);
    });
  });

  // Run once on load for the first color
  const firstSelectedColor = document.querySelector('.swatch[data-option-index="0"] input[type="radio"]:checked')?.value;
  if (firstSelectedColor) {
    updateSizeSwatches(firstSelectedColor);
  }
});
</script>

{% endunless %}
