      font-weight: 500;
      font-size: 14px;
      line-height: 100%;
      letter-spacing: 0%;
      text-align: center;
      text-transform: uppercase;
      padding: 8px;
      color: #1D425A;
    }

    .product-list-shop-all-btn {
      font-family: 'Outfit', sans-serif;
      font-style: normal;
      font-weight: 500;
      font-size: 16px;
      line-height: 140%;
      text-transform: uppercase;
      color: #7295BB;
      padding: 10px;
      border: 1px solid #7295BB;
    }

    .product-list-section-title-label {
      font-size: 1.25rem;
    }

    .product-list-top-label-text {
