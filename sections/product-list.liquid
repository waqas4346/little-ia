{% liquid
  assign max_items = section.settings.max_products
  assign collection_list = section.settings.collection_list
  
  assign show_tabs = false
  if collection_list != blank and collection_list.count > 1
    assign show_tabs = true
  endif
%}


<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  data-testid="product-list"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% if show_tabs %}
    <div class="product-list-header-wrapper">
      {% if section.settings.top_label != blank %}
        <div class="product-list-top-label">
          <span class="product-list-top-label-text">{{ section.settings.top_label }}</span>
        </div>
      {% endif %}
      
      {% if section.settings.section_title != blank %}
        <div class="product-list-section-title">
          <span class="product-list-section-title-label">{{ section.settings.section_title }}</span>
        </div>
      {% endif %}
      
      <div class="product-list-tabs-container">
        <div class="product-list-tabs">
          {% for collection in collection_list %}
            <button 
                class="product-list-tab {% if forloop.first %}active{% endif %}" 
                data-target="{{ collection.handle }}"
                type="button"
                aria-controls="list-{{ collection.handle }}"
                aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">
              {{ collection.title }}
            </button>
          {% endfor %}
        </div>
      </div>
    </div>
    
    <div class="product-list-contents">
      {% for collection in collection_list %}
        <div class="product-list-content-wrapper {% unless forloop.first %}active{% endunless %}" id="list-{{ collection.handle }}" {% unless forloop.first %}style="display: none;"{% endunless %}>
           {% capture list_items %}
              {% if collection.products_count != 0 %}
                {% paginate collection.products by max_items %}
                  {% for product in collection.products limit: max_items %}
                    <div class="resource-list__item">
                      {% # theme-check-disable UniqueStaticBlockId %}
                        {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
                      {% # theme-check-enable UniqueStaticBlockId %}
                    </div>
                    {% unless forloop.last %}<!--@list/split-->{% endunless %}
                  {% endfor %}
                {% endpaginate %}
              {% else %}
                 <!-- Empty state -->
              {% endif %}
           {% endcapture %}
           
           {% liquid
             assign list_items_array = list_items | strip | split: '<!--@list/split-->'
           %}
           
           {% render 'resource-list',
             list_items: list_items,
             list_items_array: list_items_array,
             settings: section.settings,
             slide_count: max_items,
             content_type: 'products',
             test_id: 'resource-list-grid'
           %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.enable_shop_all %}
       <div class="product-list-footer">
          {% assign first_col = collection_list | first %}
          <a href="{{ first_col.url }}" class="product-list-shop-all-btn" data-collection-handle="{{ first_col.handle }}">
             SHOP ALL {{ first_col.title }}
          </a>
       </div>
    {% endif %}

  {% else %}
    <!-- Single Collection or Fallback -->
    <div class="section-resource-list__header">
      {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
    </div>

    {% capture list_items %}
      {% if section.settings.collection != blank and shop.products_count != 0 %}
        {% paginate section.settings.collection.products by max_items %}
          {% for product in section.settings.collection.products limit: max_items %}
            <div
              class="resource-list__item"
            >
              {% # theme-check-disable UniqueStaticBlockId %}
                {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
              {% # theme-check-enable UniqueStaticBlockId %}
            </div>

            {% unless forloop.last %}
              <!--@list/split-->
            {% endunless %}
          {% endfor %}
        {% endpaginate %}
      {% else %}
        {% for i in (1..max_items) %}
          <div
            class="resource-list__item"
          >
            {% # theme-check-disable UniqueStaticBlockId %}
              {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: null %}
            {% # theme-check-enable UniqueStaticBlockId %}
          </div>

          {% unless forloop.last %}
            <!--@list/split-->
          {% endunless %}
        {% endfor %}
      {% endif %}
    {% endcapture %}

    {% liquid
      # Create an array from the list items to be used for different layout types
      assign list_items_array = list_items | strip | split: '<!--@list/split-->'
    %}

    {% render 'resource-list',
      list_items: list_items,
      list_items_array: list_items_array,
      settings: section.settings,
      slide_count: max_items,
      content_type: 'products',
      test_id: 'resource-list-grid'
    %}

    <div
      class="section-resource-list__content"
      style="--horizontal-alignment: {{ section.settings.horizontal_alignment }};"
    >
      {%- content_for 'blocks' -%}
    </div>
  {% endif %}
</div>

<style>
  .product-list-header-wrapper {
    text-align: center;
    margin-bottom: 16px;
  }

  @media screen and (min-width: 750px) {
    .product-list-header-wrapper {
      margin-bottom: 24px;
    }
  }

  .product-list-top-label {
    text-align: center;
    margin-bottom: 0;
  }

  .product-list-top-label-text {
    margin: 0;
    font-family: 'Sacramento', cursive, sans-serif;
    font-weight: 400;
    font-size: 30px;
    line-height: 150%;
    color: #7295BB;
    text-align: center;
    text-transform: lowercase;
    display: block;
  }

  .product-list-section-title {
    text-align: center;
    margin-bottom: 0;
  }

  .product-list-section-title-label {
    margin: 0;
    font-family: 'Futura PT', 'Outfit', sans-serif;
    font-weight: 500;
    font-size: 28px;
    line-height: 150%;
    text-transform: uppercase;
    color: #1D425A;
    text-align: center;
    display: block;
  }

  .product-list-tabs-container {
    display: flex;
    justify-content: center;
    margin-bottom: 0;
    overflow-x: auto;
    padding-bottom: 10px;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
  }

  .product-list-tabs-container::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Opera */
  }
  
  .product-list-tabs {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }
  
  .product-list-tab {
    background: transparent;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    font-family: 'Outfit', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 20.3px;
    letter-spacing: 0%;
    text-align: center;
    text-transform: uppercase;
    color: #1D425A;
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .product-list-tab:hover {
    opacity: 0.8;
  }
  
  .product-list-tab.active {

    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #1D425A;
    padding: 8px 16px;
    border-bottom: 2px solid #1D425A;
  }

  .product-list-tab.active::after {
    display: none;
  }

  .product-list-content-wrapper {
    animation: fadeIn 0.5s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .product-list-footer {
    margin-top: 32px;
    text-align: center;
  }

  .product-list-shop-all-btn {
    display: inline-block;
    padding: 10px;
    border: 1px solid #7295BB;
    background: transparent;
    color: #7295BB;
    text-decoration: none;
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 140%;
    text-transform: uppercase;
    transition: all 0.3s ease;
    border-radius: 0;
  }

  .product-list-shop-all-btn:hover {
    opacity: 0.8;
  }

  /* Product card media sizing/background in slider */
  [data-testid="product-list"] .card-gallery .product-media-container {
    background: url("bg_removal [Background removed].png"), #F7F7F7;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }

  [data-testid="product-list"] .card-gallery .product-media-container img,
  [data-testid="product-list"] .card-gallery .product-media-container picture,
  [data-testid="product-list"] .card-gallery .product-media-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Hide sale/sold-out badge on slider images */
  [data-testid="product-list"] .product-badges {
    display: none !important;
  }

  /* Ensure images in visible slides load and display properly */
  [data-testid="product-list"] .card-gallery slideshow-slide[aria-hidden="false"] img {
    content-visibility: visible !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  /* Ensure first slide is always visible and images load */
  [data-testid="product-list"] .card-gallery slideshow-slide:first-child {
    content-visibility: visible !important;
  }

  [data-testid="product-list"] .card-gallery slideshow-slide:first-child img {
    content-visibility: visible !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  /* Remove horizontal padding for max width */
  [data-testid="product-list"] .section--page-width {
    padding-inline: 0 !important;
  }

  [data-testid="product-list"] .section--page-width > * {
    padding-inline: 0 !important;
  }

  [data-testid="product-list"] .resource-list__carousel {
    padding-inline: 0 !important;
    --peek-next-slide-size: 0px;
    --gutter-slide-width: 0px !important;
    overflow: visible;
  }

  /* Prevent horizontal scroll on mobile */
  @media screen and (max-width: 749px) {
    [data-testid="product-list"] {
      overflow-x: hidden;
      width: 100%;
      max-width: 100%;
    }

    [data-testid="product-list"] .product-list-contents {
      overflow-x: hidden;
      width: 100%;
      max-width: 100%;
    }

    [data-testid="product-list"] .product-list-content-wrapper {
      overflow-x: hidden;
      width: 100%;
      max-width: 100%;
    }

    [data-testid="product-list"] .resource-list__carousel {
      overflow: hidden;
      width: 100%;
      max-width: 100%;
    }

    [data-testid="product-list"] .resource-list__carousel slideshow-container {
      overflow: hidden;
    }
  }

  [data-testid="product-list"] .resource-list__carousel slideshow-arrows {
    position: absolute;
    inset: 0;
    left: auto;
    right: auto;
    width: calc(100% + 120px);
    max-width: none;
    pointer-events: none;
    z-index: var(--layer-heightened);
    margin-left: -60px;
    margin-right: -60px;
    display: flex !important;
    padding: 0 !important;
  }

  [data-testid="product-list"] .resource-list__carousel slideshow-arrows[position='center'] {
    justify-content: space-between;
    align-items: center;
  }

  [data-testid="product-list"] .resource-list__carousel slideshow-arrows .slideshow-control {
    position: absolute;
    margin: 0;
    pointer-events: auto;
    top: 50%;
    transform: translateY(-50%);
    opacity: 1;
  }

  /* Position arrows outside the slider container */
  [data-testid="product-list"] .resource-list__carousel slideshow-arrows .slideshow-control--previous {
    left: 0;
  }

  [data-testid="product-list"] .resource-list__carousel slideshow-arrows .slideshow-control--next {
    right: 0;
  }

  @media (max-width: 1200px) {
    [data-testid="product-list"] .resource-list__carousel slideshow-arrows {
      width: calc(100% + 100px);
      margin-left: -50px;
      margin-right: -50px;
    }
  }

  /* Fix arrow positioning on mobile to prevent horizontal scroll */
  @media screen and (max-width: 749px) {
    [data-testid="product-list"] .resource-list__carousel slideshow-arrows {
      width: 100%;
      margin-left: 0;
      margin-right: 0;
      left: 0;
      right: 0;
    }

    [data-testid="product-list"] .resource-list__carousel slideshow-arrows .slideshow-control--previous {
      left: 8px;
    }

    [data-testid="product-list"] .resource-list__carousel slideshow-arrows .slideshow-control--next {
      right: 8px;
    }
  }

  /* Ensure carousel shows exactly the number of columns without peeking */
  [data-testid="product-list"] .resource-list__carousel slideshow-slides {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
  }

  /* Allow arrows to extend beyond container (desktop only) */
  [data-testid="product-list"] .resource-list__carousel slideshow-container {
    overflow: visible;
  }

  /* Prevent overflow on mobile */
  @media screen and (max-width: 749px) {
    [data-testid="product-list"] .resource-list__carousel slideshow-container {
      overflow: hidden;
    }
  }

  [data-testid="product-list"] .resource-list__carousel .resource-list__slide {
    scroll-snap-align: start;
  }

  /* Override slide width calculation to show exact number of columns */
  @container resource-list-carousel (min-width: 750px) {
    [data-testid="product-list"] .resource-list__carousel .resource-list__slide {
      --section-slide-width: calc(
        (100% - (var(--resource-list-column-gap, 8px) * (var(--column-count, 4) - 1))) /
          var(--column-count, 4)
      );
      --slide-width: var(--section-slide-width);
    }
  }

  /* Product title styling */
  [data-testid="product-list"] .text-block--product_title,
  [data-testid="product-list"] .text-block--product_title *,
  [data-testid="product-list"] .text-block--product_title p {
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 20px;
    line-height: 140%;
    color: #1D425A !important;
  }

  /* Explicit class injected on product title block */
  [data-testid="product-list"] .product-title-text,
  [data-testid="product-list"] .product-title-text *,
  [data-testid="product-list"] .product-title-text p {
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 20px;
    line-height: 140%;
    color: #1D425A !important;
  }

  @media screen and (min-width: 750px) {
    .product-list-top-label-text {
      font-size: 38px;
    }
  }

  @media (max-width: 768px) {
    .product-list-tabs {
      gap: 10px;
    }
    
    .product-list-tab {
      font-family: 'Outfit', sans-serif;
      font-weight: 400;
      font-size: 14px;
      line-height: 20.3px;
      letter-spacing: 0%;
      text-align: center;
      text-transform: uppercase;
      padding: 8px;
      color: #1D425A;
    }

    .product-list-tab.active {
      font-family: 'Outfit', sans-serif;
      font-weight: 500;
      font-size: 14px;
      line-height: 100%;
      letter-spacing: 0%;
      text-align: center;
      text-transform: uppercase;
      padding: 8px;
      color: #1D425A;
    }

    .product-list-shop-all-btn {
      font-family: 'Outfit', sans-serif;
      font-style: normal;
      font-weight: 500;
      font-size: 16px;
      line-height: 140%;
      text-transform: uppercase;
      color: #7295BB;
      padding: 10px;
      border: 1px solid #7295BB;
    }


    .product-list-footer {
      margin-top: 30px;
    }

    [data-testid="product-list"] .card-gallery .product-media-container {
      background: url("bg_removal [Background removed].png"), #F7F7F7;
    }

    [data-testid="product-list"] .text-block--product_title,
    [data-testid="product-list"] .text-block--product_title *,
    [data-testid="product-list"] .text-block--product_title p {
      font-family: 'Outfit', sans-serif;
      font-style: normal;
      font-weight: 500;
      font-size: 16px;
      line-height: 140%;
      color: #1D425A !important;
    }

    [data-testid="product-list"] .product-title-text,
    [data-testid="product-list"] .product-title-text *,
    [data-testid="product-list"] .product-title-text p {
      font-family: 'Outfit', sans-serif;
      font-style: normal;
      font-weight: 500;
      font-size: 16px;
      line-height: 140%;
      color: #1D425A !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.product-list-tab');
    const contents = document.querySelectorAll('.product-list-content-wrapper');
    const shopAllBtn = document.querySelector('.product-list-shop-all-btn');
    
    // Store collection data for button updates
    const collectionsData = {};
    {% if section.settings.collection_list != blank %}
      {% for collection in section.settings.collection_list %}
        collectionsData['{{ collection.handle }}'] = {
          title: "{{ collection.title | escape }}",
          url: "{{ collection.url }}"
        };
      {% endfor %}
    {% endif %}

    // Function to force images to load in visible content
    function forceImageLoad(content) {
      // Use requestAnimationFrame to ensure DOM is ready
      requestAnimationFrame(() => {
        requestAnimationFrame(() => {
          // First, ensure slideshow is properly initialized and first slide is visible
          const slideshows = content.querySelectorAll('slideshow-component');
          slideshows.forEach(slideshow => {
            // Ensure first slide is visible
            const firstSlide = slideshow.querySelector('slideshow-slide:first-child');
            if (firstSlide) {
              firstSlide.setAttribute('aria-hidden', 'false');
              firstSlide.removeAttribute('hidden');
              // Force content-visibility to visible to ensure images load
              firstSlide.style.contentVisibility = 'visible';
              
              // Find images in the first slide and force them to load
              const images = firstSlide.querySelectorAll('img');
              images.forEach(img => {
                // Make image visible
                img.style.contentVisibility = 'visible';
                img.style.opacity = '1';
                img.style.visibility = 'visible';
                
                // Change loading to eager
                img.loading = 'eager';
                
                // Force image to load by manipulating src/srcset
                if (!img.complete) {
                  if (img.srcset && img.srcset.trim()) {
                    // Force reload by removing and re-adding srcset
                    const srcset = img.srcset;
                    img.removeAttribute('srcset');
                    // Use a small delay to ensure browser processes
                    setTimeout(() => {
                      img.srcset = srcset;
                    }, 10);
                  } else if (img.src && img.src.trim() && !img.src.startsWith('data:')) {
                    // Force reload by removing and re-adding src
                    const src = img.src;
                    img.removeAttribute('src');
                    setTimeout(() => {
                      img.src = src;
                    }, 10);
                  }
                }
              });
            }
          });
        });
      });
    }

    // Force images to load for initially visible tab
    contents.forEach(content => {
      if (content.style.display !== 'none' && window.getComputedStyle(content).display !== 'none') {
        forceImageLoad(content);
      }
    });

    tabs.forEach(tab => {
      tab.addEventListener('click', function() {
        const targetHandle = this.dataset.target;
        
        // Update Tabs
        tabs.forEach(t => {
            t.classList.remove('active');
            t.setAttribute('aria-selected', 'false');
        });
        this.classList.add('active');
        this.setAttribute('aria-selected', 'true');
        
        // Update Content
        contents.forEach(content => {
          if (content.id === `list-${targetHandle}`) {
             content.style.display = 'block';
             // Trigger reflow for animation if needed
             content.style.animation = 'none';
             content.offsetHeight; /* trigger reflow */
             content.style.animation = 'fadeIn 0.5s ease-out forwards';
             
             // Force images to load when tab becomes visible
             forceImageLoad(content);
          } else {
             content.style.display = 'none';
          }
        });
        
        // Update Shop All Button
        if (shopAllBtn && collectionsData[targetHandle]) {
           const data = collectionsData[targetHandle];
           shopAllBtn.href = data.url;
           shopAllBtn.textContent = 'SHOP ALL ' + data.title.toUpperCase();
           shopAllBtn.setAttribute('data-collection-handle', targetHandle);
        }
      });
    });
  });
</script>

{% schema %}
{
  "name": "t:names.product_list",
  "class": "ui-test-product-list",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "_divider"
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "t:settings.collection"
    },
    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 5,
      "info": "Select multiple collections to enable tabs."
    },
    {
      "type": "text",
      "id": "top_label",
      "label": "Top Label",
      "default": "shop",
      "info": "Text displayed above the section title"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "OUR BESTSELLERS",
      "info": "Title displayed above the collection tabs"
    },
    {
       "type": "checkbox",
       "id": "enable_shop_all",
       "label": "Show 'Shop all' button",
       "default": true
    },
    {
      "type": "select",
      "id": "layout_type",
      "label": "t:settings.layout_type",
      "options": [
        {
          "value": "grid",
          "label": "t:options.grid"
        },
        {
          "value": "carousel",
          "label": "t:options.carousel"
        },
        {
          "value": "editorial",
          "label": "t:options.editorial"
        }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "carousel_on_mobile",
      "label": "t:settings.carousel_on_mobile",
      "default": false,
      "visible_if": "{{ section.settings.layout_type != 'carousel' }}"
    },
    {
      "type": "range",
      "id": "max_products",
      "label": "t:settings.product_count",
      "min": 1,
      "max": 16,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns",
      "label": "t:settings.columns",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 4,
      "visible_if": "{{ section.settings.layout_type != 'editorial' }}"
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "label": "t:settings.mobile_columns",
      "options": [
        {
          "value": "1",
          "label": "t:options.one_number"
        },
        {
          "value": "2",
          "label": "t:options.two_number"
        }
      ],
      "default": "2",
      "visible_if": "{{ section.settings.layout_type == 'grid' and section.settings.carousel_on_mobile == false }}"
    },
    {
      "type": "select",
      "id": "mobile_card_size",
      "label": "t:settings.mobile_columns",
      "options": [
        {
          "value": "60cqw",
          "label": "t:options.one_number"
        },
        {
          "value": "44cqw",
          "label": "t:options.two_number"
        }
      ],
      "default": "60cqw",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
