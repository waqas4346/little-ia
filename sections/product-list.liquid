{% liquid
  assign max_items = section.settings.max_products
  assign collection_list = section.settings.collection_list
  
  assign show_tabs = false
  if collection_list != blank and collection_list.count > 1
    assign show_tabs = true
  endif
%}


<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  data-testid="product-list"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% if show_tabs %}
    <div class="product-list-header-wrapper">
      {% if section.settings.top_label != blank %}
        <div class="product-list-top-label">
          <span class="product-list-top-label-text">{{ section.settings.top_label }}</span>
        </div>
      {% endif %}
      
      {% if section.settings.section_title != blank %}
        <div class="product-list-section-title">
          <span class="product-list-section-title-label">{{ section.settings.section_title }}</span>
        </div>
      {% endif %}
      
      <div class="product-list-tabs-container">
        <div class="product-list-tabs">
          {% for collection in collection_list %}
            <button 
                class="product-list-tab {% if forloop.first %}active{% endif %}" 
                data-target="{{ collection.handle }}"
                type="button"
                aria-controls="list-{{ collection.handle }}"
                aria-selected="{% if forloop.first %}true{% else %}false{% endif %}">
              {{ collection.title }}
            </button>
          {% endfor %}
        </div>
      </div>
    </div>
    
    <div class="product-list-contents">
      {% for collection in collection_list %}
        <div class="product-list-content-wrapper {% unless forloop.first %}active{% endunless %}" id="list-{{ collection.handle }}" {% unless forloop.first %}style="display: none;"{% endunless %}>
           {% capture list_items %}
              {% if collection.products_count != 0 %}
                {% paginate collection.products by max_items %}
                  {% for product in collection.products limit: max_items %}
                    <div class="resource-list__item">
                      {% # theme-check-disable UniqueStaticBlockId %}
                        {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
                      {% # theme-check-enable UniqueStaticBlockId %}
                    </div>
                    {% unless forloop.last %}<!--@list/split-->{% endunless %}
                  {% endfor %}
                {% endpaginate %}
              {% else %}
                 <!-- Empty state -->
              {% endif %}
           {% endcapture %}
           
           {% liquid
             assign list_items_array = list_items | strip | split: '<!--@list/split-->'
           %}
           
           {% render 'resource-list',
             list_items: list_items,
             list_items_array: list_items_array,
             settings: section.settings,
             slide_count: max_items,
             content_type: 'products',
             test_id: 'resource-list-grid'
           %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.enable_shop_all %}
       <div class="product-list-footer">
          {% assign first_col = collection_list | first %}
          <a href="{{ first_col.url }}" class="product-list-shop-all-btn" data-collection-handle="{{ first_col.handle }}">
             SHOP ALL {{ first_col.title }}
          </a>
       </div>
    {% endif %}

  {% else %}
    <!-- Single Collection or Fallback -->
    <div class="section-resource-list__header">
      {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
    </div>

    {% capture list_items %}
      {% if section.settings.collection != blank and shop.products_count != 0 %}
        {% paginate section.settings.collection.products by max_items %}
          {% for product in section.settings.collection.products limit: max_items %}
            <div
              class="resource-list__item"
            >
              {% # theme-check-disable UniqueStaticBlockId %}
                {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: product %}
              {% # theme-check-enable UniqueStaticBlockId %}
            </div>

            {% unless forloop.last %}
              <!--@list/split-->
            {% endunless %}
          {% endfor %}
        {% endpaginate %}
      {% else %}
        {% for i in (1..max_items) %}
          <div
            class="resource-list__item"
          >
            {% # theme-check-disable UniqueStaticBlockId %}
              {% content_for 'block', type: '_product-card', id: 'static-product-card', closest.product: null %}
            {% # theme-check-enable UniqueStaticBlockId %}
          </div>

          {% unless forloop.last %}
            <!--@list/split-->
          {% endunless %}
        {% endfor %}
      {% endif %}
    {% endcapture %}

    {% liquid
      # Create an array from the list items to be used for different layout types
      assign list_items_array = list_items | strip | split: '<!--@list/split-->'
    %}

    {% render 'resource-list',
      list_items: list_items,
      list_items_array: list_items_array,
      settings: section.settings,
      slide_count: max_items,
      content_type: 'products',
      test_id: 'resource-list-grid'
    %}

    <div
      class="section-resource-list__content"
      style="--horizontal-alignment: {{ section.settings.horizontal_alignment }};"
    >
      {%- content_for 'blocks' -%}
    </div>
  {% endif %}
</div>

<style>

  .product-list-top-label {
    text-align: center;
    margin-bottom: 10px;
  }

  .product-list-top-label-text {
    font-family: 'Sacramento', cursive;
    font-weight: 400;
    font-style: normal;
    font-size: 38px;
    line-height: 150%;
    letter-spacing: 0%;
    text-align: center;
    color: #7295BB;
    display: block;
  }

  .product-list-section-title {
    text-align: center;
    margin-bottom: 16px;
  }

  .product-list-section-title-label {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-foreground, #1a1a1a);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    display: block;
  }

  .product-list-tabs-container {
    display: flex;
    justify-content: center;
    margin-bottom: 24px;
    overflow-x: auto;
    padding-bottom: 10px;
  }
  
  .product-list-tabs {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }
  
  .product-list-tab {
    background: transparent;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
    font-family: 'Outfit', sans-serif;
    font-weight: 400;
    font-size: 16px;
    line-height: 20.3px;
    letter-spacing: 0%;
    text-align: center;
    text-transform: uppercase;
    color: #1D425A;
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .product-list-tab:hover {
    opacity: 0.8;
  }
  
  .product-list-tab.active {

    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    letter-spacing: 0%;
    color: #1D425A;
    padding: 8px 16px;
    border-bottom: 2px solid #1D425A;
  }

  .product-list-tab.active::after {
    display: none;
  }

  .product-list-content-wrapper {
    animation: fadeIn 0.5s ease-out forwards;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .product-list-footer {
    margin-top: 32px;
    text-align: center;
  }

  .product-list-shop-all-btn {
    display: inline-block;
    padding: 10px;
    border: 1px solid #7295BB;
    background: transparent;
    color: #7295BB;
    text-decoration: none;
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 140%;
    text-transform: uppercase;
    transition: all 0.3s ease;
    border-radius: 0;
  }

  .product-list-shop-all-btn:hover {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .product-list-tabs {
      gap: 10px;
    }
    
    .product-list-tab {
      font-family: 'Outfit', sans-serif;
      font-weight: 400;
      font-size: 14px;
      line-height: 20.3px;
      letter-spacing: 0%;
      text-align: center;
      text-transform: uppercase;
      padding: 8px;
      color: #1D425A;
    }

    .product-list-tab.active {
