    margin-top: 32px;
    text-align: center;
  }

  .product-list-shop-all-btn {
    display: inline-block;
    padding: 10px;
    border: 1px solid #7295BB;
    background: transparent;
    color: #7295BB;
    text-decoration: none;
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 140%;
    text-transform: uppercase;
    transition: all 0.3s ease;
    border-radius: 0;
  }

  .product-list-shop-all-btn:hover {
    background-color: #7295BB;
    color: #ffffff;
  }

  /* Enable product card image slider on mobile */
  @media screen and (max-width: 749px) {

    [data-testid="product-list"] .card-gallery slideshow-component[disabled='true'] slideshow-slides {
      overflow-x: auto !important;
    }

    [data-testid="product-list"] .card-gallery slideshow-slides {
      overflow-x: auto !important;
      scrollbar-width: none;
      -ms-overflow-style: none;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
    }

    [data-testid="product-list"] .card-gallery slideshow-slides::-webkit-scrollbar {
      display: none;
      width: 0;
      height: 0;
    }
  }

  /* Enable product card image slider on desktop */
  @media screen and (min-width: 750px) {
    [data-testid="product-list"] .card-gallery slideshow-component {
      pointer-events: auto !important;
    }

    [data-testid="product-list"] .card-gallery slideshow-component[disabled='true'] {
      pointer-events: auto !important;
    }

    [data-testid="product-list"] .card-gallery slideshow-component[disabled='true'] slideshow-slides {
      overflow: visible !important;
      overflow-x: auto !important;
      overflow-y: hidden !important;
      pointer-events: auto !important;
      scroll-behavior: smooth;
    }

    [data-testid="product-list"] .card-gallery slideshow-slides {
      overflow: visible !important;
      overflow-x: auto !important;
      overflow-y: hidden !important;
      scrollbar-width: none;
      -ms-overflow-style: none;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
      pointer-events: auto !important;
    }

    /* Hide native scrollbar */
    [data-testid="product-list"] .card-gallery slideshow-slides::-webkit-scrollbar {
      display: none;
      width: 0;
      height: 0;
    }

    /* Ensure slides are visible and can be scrolled - DESKTOP ONLY */
    [data-testid="product-list"] .resource-list--grid .card-gallery slideshow-slide {
      flex-shrink: 0;
      flex-basis: 100%;
      width: 100%;
      min-width: 100%;
      scroll-snap-align: start;
    }

    /* Ensure slideshow container allows scrolling */
    [data-testid="product-list"] .card-gallery slideshow-container {
      overflow: visible;
    }
  }

  /* Product card media sizing/background in slider */
  [data-testid="product-list"] .card-gallery .product-media-container {
    background: url("bg_removal [Background removed].png"), #F7F7F7;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }

  [data-testid="product-list"] .card-gallery .product-media-container img,
  [data-testid="product-list"] .card-gallery .product-media-container picture,
  [data-testid="product-list"] .card-gallery .product-media-container video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Hide sale/sold-out badge on slider images */
  [data-testid="product-list"] .product-badges {
    display: none !important;
  }

  /* Ensure images in visible slides load and display properly */
  [data-testid="product-list"] .card-gallery slideshow-slide[aria-hidden="false"] img {
    content-visibility: visible !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  /* Ensure first slide is always visible and images load */
  [data-testid="product-list"] .card-gallery slideshow-slide:first-child {
    content-visibility: visible !important;
  }

  [data-testid="product-list"] .card-gallery slideshow-slide:first-child img {
    content-visibility: visible !important;
    opacity: 1 !important;
    visibility: visible !important;
  }

  /* Remove horizontal padding for max width */
  [data-testid="product-list"] .section--page-width {
    padding-inline: 0 !important;
  }

  [data-testid="product-list"] .section--page-width > * {
    padding-inline: 0 !important;
  }

  /* Mobile: Add left padding, keep right edge flush for peek */
  @media screen and (max-width: 749px) {
    /* Break out of page-width grid to touch right edge */
    [data-testid="product-list"].section--page-width > * {
      grid-column: 1 / -1;
    }

    [data-testid="product-list"] {
      padding-inline-start: var(--page-margin, 16px) !important;
      padding-inline-end: 0 !important;
    }

    [data-testid="product-list"] .product-list-contents,
    [data-testid="product-list"] .product-list-content-wrapper {
      padding: 0 !important;
      padding-inline-start: 0 !important;
      padding-inline-end: 0 !important;
      margin: 0 !important;
    }
  }

  /* Product slider carousel container - match explore-more-products */
  [data-testid="product-list-grid"] {
    padding-inline: 0 !important;
    --peek-next-slide-size: 0px;
    --gutter-slide-width: 0px !important;
    overflow: visible;
  }

  @media (max-width: 749px) {
    [data-testid="product-list-grid"] {
      padding-inline-start: 0 !important;
      padding-inline-end: 0 !important;
      overflow: visible;
    }
  }

  @media (max-width: 749px) {
    [data-testid="product-list-grid"] {
      overflow: visible;
    }
  }

  /* Mobile (max-width: 749px): Show 2 columns like collection pages */
  @media screen and (max-width: 749px) {
    [data-testid="product-list-grid"] .product-list-desktop .resource-list__carousel {
      --column-count: 2;
      --resource-list-column-gap: {{ section.settings.columns_gap | default: 12 }}px;
    }

    /* Ensure product cards use responsive sizing like collection pages */
    [data-testid="product-list-grid"] .resource-list__item {
      min-width: 0;
    }
  }

  /* Desktop slider styling - base gap setting */
  .product-list-desktop .resource-list__carousel {
    --resource-list-column-gap-desktop: {{ section.settings.columns_gap | default: 12 }}px;
  }

  /* Tablet (750px - 1024px): Show 3 columns */
  @media screen and (min-width: 750px) and (max-width: 1024px) {
    [data-testid="product-list-grid"] {
      --column-count: 3 !important;
      --resource-list-column-gap: {{ section.settings.columns_gap | default: 12 }}px;
      --resource-list-column-gap-desktop: {{ section.settings.columns_gap | default: 12 }}px;
    }

    [data-testid="product-list-grid"] {
      overflow: hidden;
    }

    .product-list-desktop .resource-list__slide {
      width: calc((100% - (var(--resource-list-column-gap-desktop, 8px) * 2)) / 3);
      max-width: calc((100% - (var(--resource-list-column-gap-desktop, 8px) * 2)) / 3);
      flex: 0 0 calc((100% - (var(--resource-list-column-gap-desktop, 8px) * 2)) / 3);
    }

    /* Ensure product cards use responsive sizing like collection pages */
    [data-testid="product-list-grid"] .resource-list__item {
      min-width: 0;
    }
  }

  /* Desktop (min-width: 1025px): Use columns setting */
  @media screen and (min-width: 1025px) {
    [data-testid="product-list-grid"] {
      --column-count: {{ section.settings.columns | default: 4 }};
    }
  }

  /* Ensure gap is applied to slideshow slides */
  .product-list-desktop slideshow-slides {
    gap: 5px;
  }
  @media screen and (min-width: 750px) {
    .product-list-desktop slideshow-slides {
      gap: {{ section.settings.columns_gap | default: 12 }}px;
    }
  }

  /* Position arrows outside the carousel â€“ match Explore More Collections (outer/section carousel only) */
  .product-list-wrapper {
    position: relative;
    padding: 0;
  }

  .product-list-desktop slideshow-component {
    overflow: visible;
  }

  .product-list-desktop slideshow-container {
    position: relative;
    overflow: visible;
  }

  .product-list-desktop slideshow-arrows {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: calc(100%);
    pointer-events: none;
    z-index: var(--layer-heightened);
    display: flex !important;
  }

  .product-list-desktop slideshow-arrows[position='center'] {
    justify-content: space-between;
    align-items: center;
    padding: 0;
  }

  .product-list-desktop slideshow-arrows .slideshow-control {
    position: absolute;
    margin: 0;
    pointer-events: auto;
    opacity: 1;
    top: 50%;
    transform: translateY(-50%);
    z-index: var(--layer-heightened);
    transition: opacity 0.3s ease-out;
  }

  .product-list-desktop slideshow-arrows .slideshow-control--previous {
    left: -60px;
  }

  .product-list-desktop slideshow-arrows .slideshow-control--next {
    right: -60px;
  }

  @media screen and (min-width: 750px) {
    [data-testid="product-list"] {
      overflow-x: clip;
    }
  }

  @media (min-width: 1201px) {
    [data-testid="product-list"] .slideshow-control--style-chevron {
      border: 2px solid #7295bb;
    }
    [data-testid="product-list"] .slideshow-control--style-chevron svg path {
      stroke: #7295bb;
      fill: none;
    }
  }

  @media (min-width: 750px) and (max-width: 1200px) {
    .product-list-desktop slideshow-arrows .slideshow-control--previous {
      left: 0;
    }
    .product-list-desktop slideshow-arrows .slideshow-control--next {
      right: 0;
    }
    [data-testid="product-list"] .slideshow-control--style-chevron {
      background-color: #7295bb;
    }
    [data-testid="product-list"] .slideshow-control--style-chevron svg path {
      stroke: #ffffff;
      fill: none;
    }
  }

  /* Mobile carousel styling - match explore-more-products */
  @media (max-width: 749px) {
    .product-list-wrapper {
      padding: 0;
      padding-inline-start: 0 !important;
      padding-inline-end: 0 !important;
      overflow: visible;
      width: 100%;
    }

    .product-list-desktop slideshow-container {
      overflow: visible;
      width: 100%;
    }

    .product-list-desktop slideshow-arrows {
      display: none !important;
    }

    /* Allow peek of next slide on mobile - touch right edge */
    .product-list-desktop slideshow-component slideshow-slides,
    .product-list-desktop slideshow-component[disabled='true'] slideshow-slides {
      overflow-x: auto !important;
      overflow-y: visible !important;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
      scroll-snap-type: x mandatory;
    }

    .product-list-desktop slideshow-slides::-webkit-scrollbar {
      display: none;
      width: 0;
      height: 0;
    }

    /* Add padding after last slide so it doesn't touch edge when scrolled to end - only for main carousel */
    [data-testid="product-list-grid"] > slideshow-component > slideshow-container > slideshow-slides > slideshow-slide:last-child {
      padding-inline-end: var(--page-margin, 16px);
    }

    /* Custom scrollbar indicator */
    .product-list-scrollbar-indicator {
      width: auto;
      max-width: calc(100% - var(--page-margin, 16px));
      height: 4px;
      position: relative;
      margin-top: 37px;
      margin-right: var(--page-margin, 16px);
      box-sizing: border-box;
    }

    .product-list-scrollbar-track {
      width: 100%;
      height: 4px;
      background-color: #EEEEEE;
      border-radius: 10px;
      position: relative;
      overflow: hidden;
    }

    .product-list-scrollbar-thumb {
      height: 4px;
      background-color: #7295BB;
      border-radius: 10px;
      position: absolute;
      left: 0;
      top: 0;
      transition: width 0.1s ease-out;
      min-width: 20px;
      cursor: grab;
      user-select: none;
    }

    .product-list-scrollbar-thumb:active {
      cursor: grabbing;
    }

    .product-list-scrollbar-track {
      cursor: pointer;
    }
  }

  /* Hide scrollbar indicator on desktop */
  @media screen and (min-width: 750px) {
    .product-list-scrollbar-indicator {
      display: none !important;
    }
  }

  /* Allow arrows to extend beyond container (desktop only) */
  [data-testid="product-list"] .resource-list__carousel slideshow-container {
    overflow: visible;
  }

  /* Prevent overflow on mobile */
  @media screen and (max-width: 749px) {
    [data-testid="product-list"] .resource-list__carousel slideshow-container {
      overflow: hidden;
    }
  }

  [data-testid="product-list"] .resource-list__carousel .resource-list__slide {
    scroll-snap-align: start;
  }

  /* Override slide width calculation to show exact number of columns */
  @container resource-list-carousel (min-width: 750px) {
    [data-testid="product-list"] .resource-list__carousel .resource-list__slide {
      --section-slide-width: calc(
        (100% - (var(--resource-list-column-gap, 8px) * (var(--column-count, 4) - 1))) /
          var(--column-count, 4)
      );
      --slide-width: var(--section-slide-width);
    }
  }

  /* Product title styling */
  [data-testid="product-list"] .text-block--product_title,
  [data-testid="product-list"] .text-block--product_title *,
  [data-testid="product-list"] .text-block--product_title p,
  [data-testid="product-list-grid"] .text-block--product_title,
  [data-testid="product-list-grid"] .text-block--product_title *,
  [data-testid="product-list-grid"] .text-block--product_title p {
    font-family: 'Outfit', sans-serif;
    font-weight: 500;
