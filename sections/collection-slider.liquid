{% liquid
  assign collection_list = section.settings.collection_list
  assign max_items = 50

  if collection_list == blank or collection_list.count == 0
    assign all_collections = collections
    if all_collections == blank
      assign all_collections = null
      assign max_items = 0
    else
      assign max_items = all_collections.size
    endif
  else
    assign all_collections = collection_list
    assign max_items = collection_list.count
  endif
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  data-testid="collection-slider"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
    collection-slider-section
  "
  style="
    {%- render 'spacing-style', settings: section.settings -%}
    {%- render 'gap-style', value: section.settings.gap -%}
  "
>
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    <div class="collection-slider-header">
      {% if section.settings.heading != blank %}
        <h2 class="collection-slider-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="collection-slider-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% if all_collections != blank and max_items > 0 %}
    {% capture list_items %}
      {% for collection in all_collections limit: max_items %}
        <div class="resource-list__item">
          <div class="collection-slider-card">
            <a href="{{ collection.url }}" class="collection-slider-card__link">
              <div class="collection-slider-card__image-wrapper">
                {% if collection.featured_image %}
                  {{
                    collection.featured_image
                    | image_url: width: 800
                    | image_tag: loading: 'lazy', class: 'collection-slider-card__image', alt: collection.title
                  }}
                {% else %}
                  <div class="collection-slider-card__placeholder">
                    {{ collection.title | truncate: 60 }}
                  </div>
                {% endif %}
                <div class="collection-slider-card__title-overlay">
                  <span class="collection-slider-card__title">{{ collection.title }}</span>
                </div>
              </div>
            </a>
          </div>
        </div>
        {% unless forloop.last %}
          <!--@list/split-->
        {% endunless %}
      {% endfor %}
    {% endcapture %}

    {% liquid
      assign list_items_array = list_items | strip | split: '<!--@list/split-->'
      assign valid_items = list_items_array.size
    %}

    {% if valid_items > 0 %}
      {% render 'resource-list',
        list_items: list_items,
        list_items_array: list_items_array,
        settings: section.settings,
        carousel_ref: 'collectionSlider',
        slide_count: valid_items,
        content_type: 'collections',
        test_id: 'collection-slider'
      %}
      <div class="collection-slider-scrollbar-indicator hidden--desktop">
        <div class="collection-slider-scrollbar-track">
          <div class="collection-slider-scrollbar-thumb"></div>
        </div>
      </div>
    {% endif %}
  {% endif %}
</div>

<script>
  (function() {
    const section = document.getElementById('shopify-section-{{ section.id }}');
    if (!section) return;
    const mobileSlides = section.querySelector('.collection-slider-section slideshow-slides');
    const scrollbarThumb = section.querySelector('.collection-slider-scrollbar-thumb');
    const scrollbarIndicator = section.querySelector('.collection-slider-scrollbar-indicator');
    if (!mobileSlides || !scrollbarThumb || !scrollbarIndicator) return;

    function updateScrollbar() {
      const scrollLeft = mobileSlides.scrollLeft;
      const scrollWidth = mobileSlides.scrollWidth;
      const clientWidth = mobileSlides.clientWidth;
      const maxScroll = scrollWidth - clientWidth;
      if (maxScroll <= 0) {
        scrollbarIndicator.style.display = 'none';
        return;
      }
      scrollbarIndicator.style.display = 'block';
      const thumbWidth = (clientWidth / scrollWidth) * 100;
      const thumbPosition = (scrollLeft / maxScroll) * (100 - thumbWidth);
      scrollbarThumb.style.width = thumbWidth + '%';
      scrollbarThumb.style.left = thumbPosition + '%';
    }

    mobileSlides.addEventListener('scroll', updateScrollbar);
    const resizeObserver = new ResizeObserver(updateScrollbar);
    resizeObserver.observe(mobileSlides);
    updateScrollbar();
    setInterval(updateScrollbar, 100);
  })();
</script>

{% stylesheet %}
  .collection-slider-header {
    margin-bottom: 4px;
    text-align: center;
  }

  .collection-slider-heading {
    margin: 0;
    font-family: 'Sacramento', cursive, sans-serif;
    font-weight: 400;
    font-size: 30px;
    line-height: 150%;
    color: #7295BB;
    text-align: center;
    text-transform: lowercase;
  }

  .collection-slider-subheading {
    margin: 0;
    font-weight: 500;
    font-size: 24px;
    line-height: 150%;
    text-transform: uppercase;
    color: #1D425A;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .collection-slider-header {
      margin-bottom: 7px;
    }

    .collection-slider-heading {
      font-size: 38px;
    }

    .collection-slider-subheading {
      font-size: 32px;
    }
  }

  /* Collection card – same design as Featured Blogs */
  .collection-slider-section .collection-slider-card {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .collection-slider-section .collection-slider-card__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  .collection-slider-section .collection-slider-card__image-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
  }

  .collection-slider-section .collection-slider-card__image-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 53.36%, #000000 121.94%);
    z-index: 1;
    pointer-events: none;
  }

  .collection-slider-section .collection-slider-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .collection-slider-section .collection-slider-card__placeholder {
    width: 100%;
    height: 100%;
    background: #F7F7F7;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--padding-lg);
    font-size: var(--font-size--lg);
    color: var(--color-foreground);
    text-align: center;
  }

  .collection-slider-section .collection-slider-card__title-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 0 24px 24px;
    pointer-events: none;
    text-align: center;
  }

  .collection-slider-section .collection-slider-card__title {
    display: block;
    font-weight: 400;
    font-size: 22px;
    line-height: 150%;
    color: #FFFFFF;
    text-transform: uppercase;
  }

  @media (max-width: 749px) {
    .collection-slider-section .collection-slider-card__image-wrapper {
      aspect-ratio: 4 / 5;
    }

    .collection-slider-section .collection-slider-card__image-wrapper::before {
      background: linear-gradient(180.06deg, rgba(0, 0, 0, 0) 45.21%, #000000 121.86%);
    }

    .collection-slider-section .collection-slider-card__title-overlay {
      padding: 0 12px 13px;
    }

    .collection-slider-section .collection-slider-card__title {
      font-size: 14px;
      line-height: 150%;
    }
  }

  /* Desktop – same as Featured Blogs */
  @media screen and (min-width: 750px) {
    .collection-slider-section.section--page-width > .resource-list.force-full-width {
      grid-column: 2 !important;
    }

    .collection-slider-section .resource-list__carousel {
      --peek-next-slide-size: 0px !important;
    }

    .collection-slider-section .resource-list__carousel .resource-list__slide {
      --section-slide-width: calc(
        (100% - (var(--resource-list-column-gap, var(--resource-list-column-gap-desktop, 12px)) * (var(--column-count, 4) - 1)) - var(--peek-next-slide-size, 0px)) /
          var(--column-count, 4)
      );
      --fallback-slide-width: clamp(150px, var(--mobile-card-size, 60vw), var(--slide-width-max, 450px));
      --slide-width: var(--section-slide-width, var(--fallback-slide-width)) !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-slides {
      padding-inline: 0 !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-component {
      overflow: visible;
    }

    .collection-slider-section .resource-list__carousel slideshow-container {
      position: relative;
      overflow: visible;
    }

    .collection-slider-section .resource-list__carousel slideshow-arrows {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: calc(100%);
      pointer-events: none;
      z-index: var(--layer-heightened);
      display: flex !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-arrows[position='center'] {
      justify-content: space-between;
      align-items: center;
      padding: 0;
    }

    .collection-slider-section .resource-list__carousel slideshow-arrows .slideshow-control {
      position: absolute;
      margin: 0;
      pointer-events: auto;
      top: 50%;
      transform: translateY(-50%);
      opacity: 1;
      transition: opacity 0.3s ease-out;
    }

    .collection-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--previous {
      left: -60px;
    }

    .collection-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--next {
      right: -60px;
    }

    .collection-slider-section {
      overflow-x: clip;
    }

    @media (min-width: 1201px) {
      .collection-slider-section .slideshow-control--style-chevron {
        border: 2px solid #7295bb;
      }
      .collection-slider-section .slideshow-control--style-chevron svg path {
        stroke: #7295bb;
        fill: none;
      }
    }

    /* Tablet: 3 tiles per row (750-1024px) */
    @media (min-width: 750px) and (max-width: 1024px) {
      .collection-slider-section .resource-list__carousel {
        --column-count: 3 !important;
      }
      
      .collection-slider-section .resource-list__carousel .resource-list__slide {
        --section-slide-width: calc(
          (100% - (var(--resource-list-column-gap, var(--resource-list-column-gap-desktop, 12px)) * 2) - var(--peek-next-slide-size, 0px)) / 3
        ) !important;
        --slide-width: var(--section-slide-width, var(--fallback-slide-width)) !important;
      }
    }

    @media (max-width: 1200px) {
      .collection-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--previous {
        left: 0px;
      }
      .collection-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--next {
        right: 0px;
      }
      .collection-slider-section .slideshow-control--style-chevron {
        background-color: #7295bb;
      }
      .collection-slider-section .slideshow-control--style-chevron svg path {
        stroke: #ffffff;
        fill: none;
      }
    }
  }

  /* Mobile – same as Featured Blogs */
  @media screen and (max-width: 749px) {
    .collection-slider-section.section--page-width > .resource-list.force-full-width {
      grid-column: 1 / -1;
    }

    .collection-slider-section.section--page-width {
      padding-inline-start: var(--page-margin, 16px) !important;
      padding-inline-end: 0 !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-component {
      --cursor: grab;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-container {
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      overflow: visible;
    }

    .collection-slider-section .resource-list__carousel slideshow-component[disabled='true'] slideshow-slides {
      overflow-x: auto !important;
    }

    .collection-slider-section .resource-list__carousel {
      --resource-list-column-gap: 5px !important;
    }

    .collection-slider-section .resource-list__carousel {
      --card-width: clamp(150px, 48cqw, 450px);
    }

    .collection-slider-section .resource-list__carousel slideshow-slides {
      gap: 5px !important;
      overflow-x: auto !important;
      scrollbar-width: none;
      -ms-overflow-style: none;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      padding-inline-start: 0 !important;
      padding-inline-end: var(--page-margin, 16px) !important;
      display: grid !important;
      grid-template-rows: repeat(2, auto) !important;
      grid-auto-flow: column !important;
      grid-auto-columns: var(--card-width) !important;
      height: calc(var(--card-width) * 1.25 * 2 + 5px) !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-slides::-webkit-scrollbar {
      display: none;
      width: 0;
      height: 0;
    }

    .collection-slider-section .resource-list__carousel .resource-list__slide {
      --slide-width: var(--card-width) !important;
      width: var(--card-width) !important;
      min-width: var(--card-width) !important;
      max-width: var(--card-width) !important;
      scroll-snap-align: start;
    }

    .collection-slider-section .resource-list__carousel slideshow-component,
    .collection-slider-section .resource-list__carousel slideshow-container {
      padding-inline-start: 0 !important;
      padding-inline-end: 0 !important;
    }

    .collection-slider-section .resource-list__carousel slideshow-arrows {
      display: none !important;
    }

    .collection-slider-section.section--page-width > .collection-slider-scrollbar-indicator {
      grid-column: 1 / -2;
      width: 100%;
    }

    .collection-slider-scrollbar-indicator {
      width: 100%;
      height: 4px;
      position: relative;
      margin-top: 12px;
    }

    .collection-slider-scrollbar-track {
      width: 100%;
      height: 4px;
      background-color: #EEEEEE;
      border-radius: 10px;
      position: relative;
      overflow: hidden;
    }

    .collection-slider-scrollbar-thumb {
      height: 4px;
      background-color: #7295BB;
      border-radius: 10px;
      position: absolute;
      left: 0;
      top: 0;
      transition: width 0.1s ease-out;
      min-width: 20px;
    }
  }
{% endstylesheet %}

