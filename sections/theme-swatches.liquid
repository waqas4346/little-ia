
<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }}"
>
  <div
    class="theme-swatches-content spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
      --theme-swatches-gap: {{ section.settings.gap }}px;
      --theme-swatch-size: {{ section.settings.swatch_size }}px;
      --theme-swatch-border-radius: {{ section.settings.swatch_border_radius }}px;
    "
  >
    {% content_for 'blocks' %}
  </div>
</div>

{% stylesheet %}
  .theme-swatches-content {
    contain: content;
    content-visibility: auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--theme-swatches-gap);
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .theme-swatches-content {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .theme-swatches-content {
      grid-template-columns: repeat(6, 1fr);
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Theme Swatches",
  "class": "section-wrapper",
  "tag": "section",
  "blocks": [
    {
      "type": "theme-swatch"
    }
  ],
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "swatch_size",
      "label": "Swatch Size",
      "min": 80,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 120,
      "info": "Size of each swatch image"
    },
    {
      "type": "range",
      "id": "swatch_border_radius",
      "label": "Swatch Border Radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0,
      "info": "Border radius for swatch images (0 = square, 100 = circle)"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Theme Swatches",
      "category": "Custom",
      "settings": {
        "gap": 20,
        "swatch_size": 120,
        "swatch_border_radius": 0,
        "color_scheme": "scheme-1",
        "padding-block-start": 36,
        "padding-block-end": 36
      }
    }
  ]
}
{% endschema %}

