    position: relative;
    width: 20.99px;
    height: 20.99px;
    pointer-events: all;
    flex-shrink: 0;
  }
  
  .product-video-slider__quick-add-wrapper .quick-add {
    position: relative;
    inset: auto;
    pointer-events: all;
  }
  
  .product-video-slider__quick-add-wrapper .quick-add__button--add {
    display: none !important;
  }
  
  .product-video-slider__quick-add-wrapper .quick-add__button--choose {
    position: relative;
    right: auto;
    bottom: auto;
    width: 20.99px;
    height: 20.99px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 1;
    border-radius: 50%;
    border: 1px solid #1D425A;
