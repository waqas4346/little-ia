<script>
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('.product-video-slider__carousel');
    if (!carousel) return;
    
    const slidesContainer = carousel.querySelector('slideshow-slides');
    if (!slidesContainer) return;
    
    const slides = Array.from(carousel.querySelectorAll('slideshow-slide'));
    if (slides.length === 0) return;
    
    const slideshowComponent = carousel.closest('slideshow-component');
    if (!slideshowComponent) return;
    
    let currentCenterSlide = null;
    let isUpdating = false;
    let rafId = null;
    let isNavigating = false;
    
    // Function to center a specific slide
    function centerSlide(slide, instant = false) {
      if (!slide || !slidesContainer) return;
      
      const containerRect = slidesContainer.getBoundingClientRect();
      const slideRect = slide.getBoundingClientRect();
      const containerCenter = containerRect.left + containerRect.width / 2;
      const slideCenter = slideRect.left + slideRect.width / 2;
      const scrollOffset = slideCenter - containerCenter;
      
      // Calculate the current scroll position
      const currentScroll = slidesContainer.scrollLeft;
      let targetScroll = currentScroll + scrollOffset;
      
      // Clamp to valid scroll range
      const maxScroll = slidesContainer.scrollWidth - slidesContainer.clientWidth;
      targetScroll = Math.max(0, Math.min(maxScroll, targetScroll));
      
      // Scroll to center the slide
      slidesContainer.scrollTo({
        left: targetScroll,
        behavior: instant ? 'auto' : 'smooth'
      });
      
      // Update center slide class
      if (currentCenterSlide) {
        currentCenterSlide.classList.remove('product-video-slider__center-slide');
      }
      slide.classList.add('product-video-slider__center-slide');
      currentCenterSlide = slide;
    }
    
    // Function to find the slide closest to center
    function findCenterSlide() {
      const containerRect = slidesContainer.getBoundingClientRect();
      const containerCenter = containerRect.left + containerRect.width / 2;
      
      let centerSlide = null;
      let minDistance = Infinity;
      
      slides.forEach(slide => {
        const slideRect = slide.getBoundingClientRect();
        const slideCenter = slideRect.left + slideRect.width / 2;
        const distance = Math.abs(containerCenter - slideCenter);
        
        // Only consider slides that are at least partially visible
        if (slideRect.right > containerRect.left && slideRect.left < containerRect.right) {
          if (distance < minDistance) {
            minDistance = distance;
            centerSlide = slide;
          }
        }
      });
      
      return centerSlide;
    }
    
    function updateCenterSlide() {
      if (isUpdating || isNavigating) return;
      isUpdating = true;
      
      // Use requestAnimationFrame for smooth updates
      if (rafId) {
        cancelAnimationFrame(rafId);
      }
      
      rafId = requestAnimationFrame(function() {
        const centerSlide = findCenterSlide();
        
        // Only update if the center slide actually changed
        if (centerSlide && centerSlide !== currentCenterSlide) {
          // Remove center class from previous slide
          if (currentCenterSlide) {
            currentCenterSlide.classList.remove('product-video-slider__center-slide');
          }
          
          // Add center class to new slide
          centerSlide.classList.add('product-video-slider__center-slide');
          currentCenterSlide = centerSlide;
        }
        
        isUpdating = false;
        rafId = null;
      });
    }
    
    // Custom navigation: move one item at a time and center it
    function navigateOneItem(direction) {
      if (isNavigating) return;
      isNavigating = true;
      
      // Find current center slide
      let currentIndex = -1;
      const currentCenter = findCenterSlide();
      
      if (currentCenter) {
        currentIndex = slides.indexOf(currentCenter);
      } else {
        // Fallback: find first visible slide
        const containerRect = slidesContainer.getBoundingClientRect();
        for (let i = 0; i < slides.length; i++) {
          const slideRect = slides[i].getBoundingClientRect();
          if (slideRect.right > containerRect.left && slideRect.left < containerRect.right) {
            currentIndex = i;
            break;
          }
        }
      }
      
      if (currentIndex === -1) {
        isNavigating = false;
        return;
      }
      
      // Calculate next index (move by 1)
      let nextIndex = direction === 'next' ? currentIndex + 1 : currentIndex - 1;
      
      // Clamp to valid range
      nextIndex = Math.max(0, Math.min(slides.length - 1, nextIndex));
      
      // If we're at the edge and can't move further, center the current item
      if (nextIndex === currentIndex) {
        // Already at edge, try to center the current item
        if (currentCenter) {
          centerSlide(currentCenter, false);
        }
        isNavigating = false;
        return;
      }
      
      const nextSlide = slides[nextIndex];
      if (!nextSlide) {
        isNavigating = false;
        return;
      }
      
      // Center the next slide
      centerSlide(nextSlide, false);
      
      // Update slideshow component's current index
      if (slideshowComponent.select) {
        slideshowComponent.select(nextIndex, null, { animate: false });
      }
      
      // Reset navigation flag after scroll completes
      setTimeout(() => {
        isNavigating = false;
        updateCenterSlide();
      }, 500);
    }
    
    // Intercept the slideshow component's next/previous methods to move one item at a time
    slideshowComponent.next = function(event, options) {
      navigateOneItem('next');
    };
    
    slideshowComponent.previous = function(event, options) {
      navigateOneItem('previous');
    };
    
    // Initial update with delay to ensure DOM is ready
    setTimeout(function() {
      const initialCenterSlide = findCenterSlide();
      if (initialCenterSlide) {
        centerSlide(initialCenterSlide, true);
      }
      updateCenterSlide();
    }, 200);
    
    // Update on scroll with debouncing
    let scrollTimeout;
    let lastScrollTime = 0;
    slidesContainer.addEventListener('scroll', function() {
      if (isNavigating) return;
      
      const now = Date.now();
      // Throttle to max once per 100ms
      if (now - lastScrollTime < 100) {
        clearTimeout(scrollTimeout);
        scrollTimeout = setTimeout(updateCenterSlide, 150);
        return;
      }
      lastScrollTime = now;
      
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(updateCenterSlide, 100);
    }, { passive: true });
    
    // Update on resize with debouncing
    let resizeTimeout;
    window.addEventListener('resize', function() {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(function() {
        const resizedCenterSlide = findCenterSlide();
        if (resizedCenterSlide) {
          centerSlide(resizedCenterSlide, false);
        }
        updateCenterSlide();
      }, 200);
    });
    
    // Update when slideshow component changes slide (for arrow navigation)
    if (slideshowComponent) {
      // Listen for slide changes via MutationObserver (less frequent than scroll)
      const observer = new MutationObserver(function() {
        if (!isNavigating) {
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(updateCenterSlide, 150);
        }
      });
      
      observer.observe(slidesContainer, {
        attributes: true,
        attributeFilter: ['aria-hidden'],
        childList: false,
        subtree: true
      });
    }
    
    // Make video wrappers clickable to toggle play/pause
    const videoWrappers = carousel.querySelectorAll('.product-video-slider__video-wrapper');
    videoWrappers.forEach(function(wrapper) {
      const deferredMedia = wrapper.querySelector('deferred-media');
      if (!deferredMedia) return;
      
      let clickHandlerAdded = false;
      
      function handleVideoClick(e) {
        // Don't trigger if clicking on interactive elements (buttons, links, etc.)
        if (e.target.closest('button, a, .quick-add')) {
          return;
        }
        
        // If video is not loaded yet, let the default play button handle it
        if (!deferredMedia.hasAttribute('data-media-loaded')) {
          return;
        }
        
        // Try to call toggleMedia method directly if available
        if (deferredMedia.toggleMedia && typeof deferredMedia.toggleMedia === 'function') {
          deferredMedia.toggleMedia();
        }
      }
      
      function setupVideoClickHandler() {
        if (clickHandlerAdded) return;
        clickHandlerAdded = true;
        
        // Add click handler to toggle play/pause
        wrapper.addEventListener('click', handleVideoClick, true);
        wrapper.style.cursor = 'pointer';
      }
      
      function playVideoAfterLoad() {
        // Wait for the video element to be ready in the DOM
        let attempts = 0;
        const maxAttempts = 10;
        
        function tryPlay() {
          attempts++;
          
          // First try using the component's playMedia method
          if (deferredMedia.playMedia && typeof deferredMedia.playMedia === 'function') {
            try {
              deferredMedia.playMedia();
              return;
            } catch (err) {
              console.log('playMedia method failed:', err);
            }
          }
          
          // Fallback: try to find and play the video element directly
          const videoElement = deferredMedia.querySelector('video');
          const iframe = deferredMedia.querySelector('iframe[data-video-type]');
          
          if (videoElement) {
            videoElement.play().catch(function(err) {
              // If still not ready, try again
              if (attempts < maxAttempts) {
                setTimeout(tryPlay, 50);
              } else {
                console.log('Video play failed after attempts:', err);
              }
            });
          } else if (iframe) {
            // For iframe videos (YouTube/Vimeo), use postMessage
            const videoType = iframe.dataset.videoType;
            if (videoType === 'youtube') {
              iframe.contentWindow?.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
            } else if (videoType === 'vimeo') {
              iframe.contentWindow?.postMessage('{"method":"play"}', '*');
            }
          } else if (attempts < maxAttempts) {
            // Video element not ready yet, try again
            setTimeout(tryPlay, 50);
          }
        }
        
        // Start trying after a short delay
        setTimeout(tryPlay, 50);
      }
      
      // Watch for when video is loaded
      const mediaObserver = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          if (mutation.type === 'attributes' && mutation.attributeName === 'data-media-loaded') {
            setupVideoClickHandler();
            playVideoAfterLoad();
          }
        });
      });
      
      mediaObserver.observe(deferredMedia, {
        attributes: true,
        attributeFilter: ['data-media-loaded']
      });
      
      // Also check if video is already loaded
      if (deferredMedia.hasAttribute('data-media-loaded')) {
        setupVideoClickHandler();
      }
      
      // Intercept the initial play button click to ensure video plays after loading
      const initialPlayButton = deferredMedia.querySelector('[ref="deferredMediaPlayButton"]');
      if (initialPlayButton) {
        // Use a small delay to let showDeferredMedia complete first
        initialPlayButton.addEventListener('click', function(e) {
          // Ensure the button is clickable
          e.stopPropagation();
          
          // Wait for video to load, then play it
          const checkAndPlay = setInterval(function() {
            if (deferredMedia.hasAttribute('data-media-loaded')) {
              clearInterval(checkAndPlay);
              playVideoAfterLoad();
            }
          }, 50);
          
          // Stop checking after 2 seconds
          setTimeout(function() {
            clearInterval(checkAndPlay);
          }, 2000);
        });
      }
      
      // Also add a direct click handler to the wrapper as a fallback for initial play
      // This only triggers if clicking on the wrapper itself (not on buttons)
      wrapper.addEventListener('click', function(e) {
        // Only handle if clicking directly on the wrapper background
        if (e.target === wrapper && !deferredMedia.hasAttribute('data-media-loaded')) {
          const playButton = deferredMedia.querySelector('[ref="deferredMediaPlayButton"]');
          if (playButton && !playButton.classList.contains('deferred-media__playing')) {
            playButton.click();
          }
        }
      });
    });
  });
