<script>
    document.addEventListener('DOMContentLoaded', function () {
      console.log('Custom validation script loaded.');

      // Get the form element (assuming Avis Options also uses a similar form structure)
      var productForm = document.querySelector('form[action="/cart/add"]');
      var errorMessage = document.getElementById('custom-error-message');

      // Ensure the form exists
      if (productForm) {
        console.log('Form found, adding event listener.');

        // Add event listener for form submission
        productForm.addEventListener('submit', function (event) {
          console.log('Form submission triggered.');

          // Get the values of the input fields
          var insideText = document.getElementById('custom_name_1').value.trim();
          var outsideText = document.getElementById('custom_name_2').value.trim();

          console.log('Inside Text:', insideText);
          console.log('Outside Text:', outsideText);

          // Check if both fields are filled
          if (insideText === '' || outsideText === '') {
            console.log('Validation failed, showing error message.');

            // Prevent form submission
            event.preventDefault();
            event.stopImmediatePropagation(); // Stop any other event listeners

            // Show the error message
            if (errorMessage) {
              errorMessage.textContent = 'Please fill in both text fields before adding the product to the cart.';
              errorMessage.style.display = 'block';
            }
          } else {
            console.log('Validation passed, proceeding with submission.');
            // Hide the error message if both fields are filled
            if (errorMessage) {
              errorMessage.style.display = 'none';
            }
          }
        });
      } else {
        console.log('Form not found.');
      }
    });
