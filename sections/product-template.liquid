document.addEventListener('DOMContentLoaded', function () {
  console.log('Custom validation script loaded.');

  // Get the form element and the Add to Cart button
  var productForm = document.querySelector('form[action="/cart/add"]');
  var addToCartButton = document.querySelector('form[action="/cart/add"] button[type="submit"]');
  var errorMessage = document.getElementById('custom-error-message');

  // Validation function for products with the COY tag
  function validateForm() {
    var isValid = true;

    // Check if the product has the COY tag by looking for the custom input and color section
    var colorOptions = document.getElementsByName('properties[Text Color]');
    var textInput = document.getElementById('custom-input');

    // If these elements don't exist, skip validation
    if (!colorOptions.length || !textInput) {
      return true; // Skip validation for products without COY tag
    }

    // Check if a color is selected
    var colorSelected = false;
    for (var i = 0; i < colorOptions.length; i++) {
      if (colorOptions[i].checked) {
        colorSelected = true;
        break;
      }
    }

    // Get the text input value
    var textValue = textInput.value.trim();

    // Validation logic
    if (!colorSelected || textValue === '') {
      isValid = false;

      // Show the error message
      if (errorMessage) {
        errorMessage.textContent = 'Please select a color and enter text before adding the product to the cart.';
        errorMessage.style.display = 'block';
      }
    } else {
      // Hide the error message
      if (errorMessage) {
        errorMessage.style.display = 'none';
      }
    }

    return isValid;
  }

  // Intercept Add to Cart Button Click
  if (addToCartButton) {
    addToCartButton.addEventListener('click', function (event) {
      console.log('Add to Cart button clicked.');

      // Perform validation only for products with COY tag
      if (!validateForm()) {
        console.log('Validation failed, preventing action.');

        // Prevent form submission
        event.preventDefault();
        event.stopImmediatePropagation(); // Stop any other event listeners from running
      } else {
        console.log('Validation passed, allowing submission.');
      }
    });
  }

  // Intercept form submission to ensure validation happens before submission
  if (productForm) {
    productForm.addEventListener('submit', function (event) {
      console.log('Form submission triggered.');

      // Perform validation before submitting
      if (!validateForm()) {
        console.log('Validation failed, blocking submission.');

        // Prevent the form submission
        event.preventDefault();
        event.stopImmediatePropagation(); // Prevent further handling of the submit event
      } else {
        console.log('Validation passed, proceeding with submission.');
      }
    });
  }
});

