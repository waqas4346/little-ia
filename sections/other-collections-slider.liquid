{% liquid
  assign metafield_collections = null

  if collection.metafields.custom.cb_other_collections != blank
    assign metafield_collections = collection.metafields.custom.cb_other_collections.value
  elsif product.metafields.custom.cb_other_collections != blank
    assign metafield_collections = product.metafields.custom.cb_other_collections.value
  elsif shop.metafields.custom.cb_other_collections != blank
    assign metafield_collections = shop.metafields.custom.cb_other_collections.value
  endif

  if metafield_collections != blank
    assign all_collections = metafield_collections
    if all_collections.size > 0
      assign max_items = all_collections.size
    else
      assign max_items = 0
    endif
  else
    assign all_collections = null
    assign max_items = 0
  endif
%}

{% if all_collections != blank and max_items > 0 %}
<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  data-testid="other-collections-slider"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
    other-collections-slider-section
  "
  style="
    {%- render 'spacing-style', settings: section.settings -%}
    {%- render 'gap-style', value: section.settings.gap -%}
  "
>
  {% if section.settings.heading != blank or section.settings.subheading != blank %}
    <div class="other-collections-slider-header">
      {% if section.settings.heading != blank %}
        <h2 class="other-collections-slider-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.subheading != blank %}
        <p class="other-collections-slider-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  {% capture list_items %}
    {% assign printed_first = false %}
    {% for collection_item in all_collections limit: max_items %}
      {% assign collection = collection_item %}
      {% if collection and collection.url %}
        {% if printed_first %}
          <!--@list/split-->
        {% endif %}
        <div class="resource-list__item">
          <div class="other-collections-slider-card">
            <a href="{{ collection.url }}" class="other-collections-slider-card__link">
              <div class="other-collections-slider-card__image-wrapper">
                {% if collection.featured_image %}
                  {{
                    collection.featured_image
                    | image_url: width: 800
                    | image_tag: loading: 'lazy', class: 'other-collections-slider-card__image', alt: collection.title
                  }}
                {% else %}
                  <div class="other-collections-slider-card__placeholder">
                    {{ collection.title | truncate: 60 }}
                  </div>
                {% endif %}
                <div class="other-collections-slider-card__title-overlay">
                  <span class="other-collections-slider-card__title">{{ collection.title }}</span>
                </div>
              </div>
            </a>
          </div>
        </div>
        {% assign printed_first = true %}
      {% endif %}
    {% endfor %}
  {% endcapture %}

  {% liquid
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
    assign valid_items = 0
    for item in list_items_array
      assign item_stripped = item | strip
      unless item_stripped == blank or item_stripped == ''
        assign valid_items = valid_items | plus: 1
      endunless
    endfor
  %}

  {% if valid_items > 0 and list_items_array.size > 0 %}
    {% render 'resource-list',
      list_items: list_items,
      list_items_array: list_items_array,
      settings: section.settings,
      carousel_ref: 'otherCollectionsSlider',
      slide_count: valid_items,
      content_type: 'collections',
      test_id: 'other-collections-slider'
    %}
    <div class="other-collections-slider-scrollbar-indicator hidden--desktop">
      <div class="other-collections-slider-scrollbar-track">
        <div class="other-collections-slider-scrollbar-thumb"></div>
      </div>
    </div>
  {% endif %}
</div>

<script>
  (function() {
    function initScrollbar() {
      const section = document.getElementById('shopify-section-{{ section.id }}');
      if (!section) return false;
      const root = section.querySelector('.other-collections-slider-section');
      if (!root) return false;
      const mobileSlides = root.querySelector('.resource-list__carousel slideshow-slides') || root.querySelector('slideshow-slides');
      const scrollbarThumb = root.querySelector('.other-collections-slider-scrollbar-thumb');
      const scrollbarIndicator = root.querySelector('.other-collections-slider-scrollbar-indicator');
      if (!mobileSlides || !scrollbarThumb || !scrollbarIndicator) return false;

      function updateScrollbar() {
        const scrollLeft = mobileSlides.scrollLeft;
        const scrollWidth = mobileSlides.scrollWidth;
        const clientWidth = mobileSlides.clientWidth;
        const maxScroll = scrollWidth - clientWidth;
        if (maxScroll <= 0) {
          scrollbarIndicator.style.display = 'none';
          return;
        }
        scrollbarIndicator.style.display = 'block';
        const thumbWidth = (clientWidth / scrollWidth) * 100;
        const thumbPosition = (scrollLeft / maxScroll) * (100 - thumbWidth);
        scrollbarThumb.style.width = thumbWidth + '%';
        scrollbarThumb.style.left = thumbPosition + '%';
      }

      mobileSlides.addEventListener('scroll', updateScrollbar);
      const resizeObserver = new ResizeObserver(updateScrollbar);
      resizeObserver.observe(mobileSlides);
      updateScrollbar();
      setInterval(updateScrollbar, 100);
      return true;
    }

    function tryInit(attempt) {
      if (initScrollbar()) return;
      if (attempt < 5) setTimeout(function() { tryInit(attempt + 1); }, 150 * attempt);
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() { tryInit(0); });
    } else {
      tryInit(0);
    }
  })();
</script>
{% endif %}

{% stylesheet %}
  .other-collections-slider-header {
    margin-bottom: 4px;
    text-align: center;
  }

  .other-collections-slider-heading {
    margin: 0;
    font-family: 'Outfit', sans-serif;
    font-weight: 400;
    font-size: 30px;
    line-height: 150%;
    color: #7295BB;
    text-align: center;
    text-transform: lowercase;
  }

  .other-collections-slider-subheading {
    margin: 0;
    font-weight: 500;
    font-size: 24px;
    line-height: 150%;
    text-transform: uppercase;
    color: #1D425A;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .other-collections-slider-header {
      margin-bottom: 7px;
    }

    .other-collections-slider-heading {
      font-size: 38px;
    }

    .other-collections-slider-subheading {
      font-size: 32px;
    }
  }

  /* Collection card – same design as Featured Blogs / Collection Slider */
  .other-collections-slider-section .other-collections-slider-card {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .other-collections-slider-section .other-collections-slider-card__link {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
  }

  .other-collections-slider-section .other-collections-slider-card__image-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
  }

  .other-collections-slider-section .other-collections-slider-card__image-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 53.36%, #000000 121.94%);
    z-index: 1;
    pointer-events: none;
  }

  .other-collections-slider-section .other-collections-slider-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .other-collections-slider-section .other-collections-slider-card__placeholder {
    width: 100%;
    height: 100%;
    background: #F7F7F7;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--padding-lg);
    font-size: var(--font-size--lg);
    color: var(--color-foreground);
    text-align: center;
  }

  .other-collections-slider-section .other-collections-slider-card__title-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    padding: 0 24px 24px;
    pointer-events: none;
    text-align: center;
  }

  .other-collections-slider-section .other-collections-slider-card__title {
    display: block;
    font-weight: 400;
    font-size: 22px;
    line-height: 150%;
    color: #FFFFFF;
    text-transform: uppercase;
  }

  @media (max-width: 749px) {
    .other-collections-slider-section .other-collections-slider-card__image-wrapper {
      aspect-ratio: 4 / 5;
    }

    .other-collections-slider-section .other-collections-slider-card__image-wrapper::before {
      background: linear-gradient(180.06deg, rgba(0, 0, 0, 0) 45.21%, #000000 121.86%);
    }

    .other-collections-slider-section .other-collections-slider-card__title-overlay {
      padding: 0 12px 13px;
    }

    .other-collections-slider-section .other-collections-slider-card__title {
      font-size: 14px;
      line-height: 150%;
    }
  }

  /* Desktop – same as Featured Blogs / Collection Slider */
  @media screen and (min-width: 750px) {
    .other-collections-slider-section.section--page-width > .resource-list.force-full-width {
      grid-column: 2 !important;
    }

    .other-collections-slider-section .resource-list__carousel {
      --peek-next-slide-size: 0px !important;
    }

    .other-collections-slider-section .resource-list__carousel .resource-list__slide {
      --section-slide-width: calc(
        (100% - (var(--resource-list-column-gap, var(--resource-list-column-gap-desktop, 12px)) * (var(--column-count, 4) - 1)) - var(--peek-next-slide-size, 0px)) /
          var(--column-count, 4)
      );
      --fallback-slide-width: clamp(150px, var(--mobile-card-size, 60vw), var(--slide-width-max, 450px));
      --slide-width: var(--section-slide-width, var(--fallback-slide-width)) !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-slides {
      padding-inline: 0 !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-component {
      overflow: visible;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-container {
      position: relative;
      overflow: visible;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-arrows {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: calc(100%);
      pointer-events: none;
      z-index: var(--layer-heightened);
      display: flex !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-arrows[position='center'] {
      justify-content: space-between;
      align-items: center;
      padding: 0;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-arrows .slideshow-control {
      position: absolute;
      margin: 0;
      pointer-events: auto;
      top: 50%;
      transform: translateY(-50%);
      opacity: 1;
      transition: opacity 0.3s ease-out;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--previous {
      left: -60px;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--next {
      right: -60px;
    }

    .other-collections-slider-section {
      overflow-x: clip;
    }

    /* Tablet: 3 tiles per row (750-1024px) - match explore-more-products */
    @media (min-width: 750px) and (max-width: 1024px) {
      .other-collections-slider-section .resource-list,
      .other-collections-slider-section .resource-list__carousel {
        --column-count: 3 !important;
        --gutter-slide-width: 0px !important;
      }
      
      .other-collections-slider-section .resource-list__carousel .resource-list__slide {
        width: calc((100% - (var(--resource-list-column-gap-desktop, 12px) * 2)) / 3) !important;
        max-width: calc((100% - (var(--resource-list-column-gap-desktop, 12px) * 2)) / 3) !important;
        flex: 0 0 calc((100% - (var(--resource-list-column-gap-desktop, 12px) * 2)) / 3) !important;
      }

      /* Enable scroll snap and scrolling on tablet */
      .other-collections-slider-section .resource-list__carousel slideshow-component[disabled='true'] slideshow-slides {
        overflow-x: auto !important;
      }

      .other-collections-slider-section .resource-list__carousel slideshow-slides {
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
      }

      .other-collections-slider-section .resource-list__carousel .resource-list__slide {
        scroll-snap-align: start;
      }
    }

    @media (min-width: 1201px) {
      .other-collections-slider-section .slideshow-control--style-chevron {
        border: 2px solid #7295bb;
      }
      .other-collections-slider-section .slideshow-control--style-chevron svg path {
        stroke: #7295bb;
        fill: none;
      }
    }

    @media (max-width: 1200px) {
      .other-collections-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--previous {
        left: 0px;
      }
      .other-collections-slider-section .resource-list__carousel slideshow-arrows .slideshow-control--next {
        right: 0px;
      }
      .other-collections-slider-section .slideshow-control--style-chevron {
        background-color: #7295bb;
      }
      .other-collections-slider-section .slideshow-control--style-chevron svg path {
        stroke: #ffffff;
        fill: none;
      }
    }
  }

  /* Mobile – same as Featured Blogs / Collection Slider */
  @media screen and (max-width: 749px) {
    .other-collections-slider-section.section--page-width > .resource-list.force-full-width {
      grid-column: 1 / -1;
    }

    .other-collections-slider-section.section--page-width {
      padding-inline-start: var(--page-margin, 16px) !important;
      padding-inline-end: 0 !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-component {
      --cursor: grab;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-container {
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      overflow: visible;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-component[disabled='true'] slideshow-slides {
      overflow-x: auto !important;
    }

    /* Set mobile to show 2 columns - match explore-more-products */
    .other-collections-slider-section .resource-list,
    .other-collections-slider-section .resource-list__carousel {
      --column-count: 2 !important;
      --gutter-slide-width: 0px !important;
    }

    /* Override mobile slide width to use column-count calculation - match explore-more-products */
    .other-collections-slider-section .resource-list__carousel .resource-list__slide {
      --section-slide-width: calc(
        (100% - (var(--resource-list-column-gap, 5px) * (var(--column-count, 2) - 1))) / var(--column-count, 2)
      );
      --slide-width: var(--section-slide-width) !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-slides {
      gap: 5px !important;
      overflow-x: auto !important;
      scrollbar-width: none;
      -ms-overflow-style: none;
      -webkit-overflow-scrolling: touch;
      scroll-snap-type: x mandatory;
      padding-bottom: 0 !important;
      margin-bottom: 0 !important;
      padding-inline-start: 0 !important;
      padding-inline-end: 0 !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-slides::-webkit-scrollbar {
      display: none;
      width: 0;
      height: 0;
    }

    /* Each slide should snap to show 2 full items - match explore-more-products */
    .other-collections-slider-section .resource-list__carousel .resource-list__slide {
      scroll-snap-align: start;
    }

    /* Add padding to last slide so it doesn't touch edge when scrolled to end */
    .other-collections-slider-section .resource-list__carousel slideshow-slide:last-child {
      padding-inline-end: var(--page-margin, 16px);
    }

    .other-collections-slider-section .resource-list__carousel slideshow-component,
    .other-collections-slider-section .resource-list__carousel slideshow-container {
      padding-inline-start: 0 !important;
      padding-inline-end: 0 !important;
    }

    .other-collections-slider-section .resource-list__carousel slideshow-arrows {
      display: none !important;
    }

    .other-collections-slider-section.section--page-width > .other-collections-slider-scrollbar-indicator {
      grid-column: 1 / -2;
      width: 100%;
    }

    .other-collections-slider-scrollbar-indicator {
      width: 100%;
      height: 4px;
      position: relative;
      margin-top: 12px;
    }

    .other-collections-slider-scrollbar-track {
      width: 100%;
      height: 4px;
      background-color: #EEEEEE;
      border-radius: 10px;
      position: relative;
      overflow: hidden;
    }

    .other-collections-slider-scrollbar-thumb {
      height: 4px;
      background-color: #7295BB;
      border-radius: 10px;
      position: absolute;
      left: 0;
      top: 0;
      transition: width 0.1s ease-out;
      min-width: 20px;
    }
  }
{% endstylesheet %}

