<div
  class="section section--{{ section.settings.section_width }} content-blocks spacing-style"
  style="
    {%- render 'spacing-style', settings: section.settings %}
    {% render 'border-override', settings: section.settings %}
  "
>
  <div class="content-blocks__container color-{{ section.settings.color_scheme }}">
    {% if section.blocks.size > 0 %}
      <div class="content-blocks__grid">
        {% for block in section.blocks %}
          <div
            class="content-blocks__block"
            style="background-color: {{ block.settings.background_color | default: '#FFFBF4' }};"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image != blank %}
              <div class="content-blocks__image">
                {{
                  block.settings.image
                  | image_url: width: 800
                  | image_tag: loading: 'lazy', class: 'content-blocks__image-element', alt: block.settings.image.alt
                }}
              </div>
            {% endif %}

            {% if block.settings.heading != blank %}
              <h3 class="content-blocks__heading">{{ block.settings.heading }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <div class="content-blocks__description">{{ block.settings.description }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% stylesheet %}
  .content-blocks__container {
    width: 100%;
  }

  .content-blocks__grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .content-blocks__block {
    width: 100%;
    max-width: 430px;
    padding: 15px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  @media screen and (min-width: 750px) {
    .content-blocks__block {
      padding: 30px;
    }
  }
  @media screen and (min-width: 1440px) {
    .content-blocks__container {
       width: 100%;
      max-width: 1338px;
      min-width: 1338px;
    }
  }

  .content-blocks__image {
    width: 100%;
    height: 168px;
    margin-bottom: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
  }

  @media screen and (min-width: 750px) {
    .content-blocks__image {
      width: 370px;
      height: 187px;
    }
  }

  .content-blocks__image-element {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }

  .content-blocks__heading {
    margin: 0 0 12px 0;
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 500;
    font-size: 24px;
    line-height: 30px;
    color: #1D425A;
  }

  @media screen and (min-width: 750px) {
    .content-blocks__heading {
      font-size: 28px;
      line-height: 35px;
    }
  }

  .content-blocks__description {
    margin: 0;
    font-family: 'Outfit', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 160%;
    color: #1D425A;
  }

  @media screen and (min-width: 750px) {
    .content-blocks__description {
      font-size: 16px;
      line-height: 160%;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Content Blocks",
  "tag": "section",
  "class": "content-blocks-wrapper section-wrapper",
  "disabled_on": {
    "groups": ["header"]
  },
  "blocks": [
    {
      "type": "content_block",
      "name": "Content Block",
      "settings": [
        {
          "type": "header",
          "content": "Image"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Block Heading"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Add your description text here.</p>"
        },
        {
          "type": "header",
          "content": "Appearance"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#FFFBF4"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page width"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Content with Image",
      "category": "Custom",
      "blocks": [
        {
          "type": "content_block",
          "settings": {
            "heading": "Block 1",
            "description": "<p>Description for block 1</p>",
            "background_color": "#FFFBF4"
          }
        },
        {
          "type": "content_block",
          "settings": {
            "heading": "Block 2",
            "description": "<p>Description for block 2</p>",
            "background_color": "#FFFBF4"
          }
        },
        {
          "type": "content_block",
          "settings": {
            "heading": "Block 3",
            "description": "<p>Description for block 3</p>",
            "background_color": "#FFFBF4"
          }
        }
      ]
    }
  ]
}
{% endschema %}
