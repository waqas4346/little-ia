
<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    gap-style
    multi-column-custom-section
  "
  style="
    {%- render 'spacing-style', settings: section.settings -%}
    {%- render 'gap-style', value: section.settings.gap -%}
  "
>
  {% if section.settings.section_heading != blank or section.settings.section_subheading != blank %}
    <div class="multi-column-custom-section__header">
      {% if section.settings.section_heading != blank %}
        <h2 class="multi-column-custom-section__heading">{{ section.settings.section_heading }}</h2>
      {% endif %}
      {% if section.settings.section_subheading != blank %}
        <div class="multi-column-custom-section__subheading rte">
          {{ section.settings.section_subheading }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="multi-column-custom-section__columns">
      {% for block in section.blocks %}
        <div class="multi-column-custom-section__column" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <div class="multi-column-custom-section__image">
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag:
                  class: 'multi-column-custom-section__image-img',
                  loading: 'lazy',
                  alt: block.settings.image.alt
              }}
            </div>
          {% endif %}
          
          {% if block.settings.text != blank %}
            <div class="multi-column-custom-section__text rte">
              {{ block.settings.text }}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% stylesheet %}
  .multi-column-custom-section {
    width: 100%;
  }

  .multi-column-custom-section__header {
    width: 100%;
    margin-bottom: 32px;
    text-align: center;
  }

  .multi-column-custom-section__heading {
    margin: 0;
    margin-bottom: 16px;
    font-weight: 500;
    font-size: 24px;
    line-height: 100%;
  }

  .multi-column-custom-section__subheading {
    font-weight: 400;
    font-size: 14px;
    line-height: 140%;
    margin: 0 auto;
    max-width: 800px;
  }

  .multi-column-custom-section__subheading p:first-child {
    margin-top: 0;
  }

  .multi-column-custom-section__subheading p:last-child {
    margin-bottom: 0;
  }

  .multi-column-custom-section__columns {
    display: flex;
    flex-direction: column;
    gap: 12px;
    width: 100%;
  }

  .multi-column-custom-section__column {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .multi-column-custom-section__image {
    width: 100%;
  }

  .multi-column-custom-section__image-img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    border-radius: var(--border-radius, 0);
  }

  .multi-column-custom-section__text {
    width: 100%;
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
  }

  .multi-column-custom-section__text p:first-child {
    margin-top: 0;
  }

  .multi-column-custom-section__text p:last-child {
    margin-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .multi-column-custom-section__header {
      margin-bottom: 48px;
    }

    .multi-column-custom-section__heading {
      font-size: 28px;
      line-height: 100%;
      margin-bottom: 24px;
    }

    .multi-column-custom-section__subheading {
      font-size: 16px;
      line-height: 140%;
    }

    .multi-column-custom-section__columns {
      flex-direction: row;
      gap: 20px;
    }

    .multi-column-custom-section__column {
      flex: 1;
      min-width: 0;
    }
  }

  @media screen and (min-width: 990px) {
    .multi-column-custom-section__columns {
      gap: 20px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Multi Column Custom",
  "tag": "section",
  "class": "multi-column-custom",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "info": "Main heading that appears at the top of the section"
    },
    {
      "type": "richtext",
      "id": "section_subheading",
      "label": "Section Sub Heading",
      "info": "Subheading that appears below the section heading"
    },
    {
      "type": "header",
      "content": "t:content.section_layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-6"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "column_block",
      "name": "Column Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multi Column Custom",
      "category": "Custom",
      "blocks": [
        {
          "type": "column_block"
        },
        {
          "type": "column_block"
        },
        {
          "type": "column_block"
        }
      ]
    }
  ]
}
{% endschema %}
