
{% liquid
  assign collection_object = collection
  if collection_object == blank
    assign collection_object = collections.all
  endif
%}

<div class="section section--{{ section.settings.section_width }} collection-banner-below{% if collection_object.featured_image %} collection-banner-below--has-image{% endif %}"
  data-testid="collection-banner-below"
>
  {% if collection_object.featured_image %}
    <div class="collection-banner-below__image-wrapper">
      {% liquid
        assign media_width_desktop = '100vw'
        assign media_width_mobile = '100vw'
        assign sizes = '(min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
        assign widths = '832, 1200, 1600, 1920, 2560, 3840'
      %}
      {{
        collection_object.featured_image
        | image_url: width: 3840
        | image_tag:
          loading: 'eager',
          class: 'collection-banner-below__image',
          widths: widths,
          sizes: sizes,
          fetchpriority: 'high'
      }}
      <div class="collection-banner-below__overlay"></div>
    </div>
  {% endif %}

  <div class="collection-banner-below__content-wrapper">
    <div class="collection-banner-below__content">
      {% if collection_object.title != blank %}
        <h1 class="collection-banner-below__title">
          {{ collection_object.title }}{% if collection_object.products_count != blank %} <span class="collection-banner-below__product-count">({{ collection_object.products_count }} {% if collection_object.products_count == 1 %}product{% else %}products{% endif %})</span>{% endif %}
        </h1>
      {% endif %}

      {% if collection_object.description != blank %}
        <div class="collection-banner-below__description">
          {{ collection_object.description }}
        </div>
      {% endif %}

      {% if collection_object.metafields.custom.cb_collection_features != blank %}
        {% assign collection_features = collection_object.metafields.custom.cb_collection_features.value %}
        {% if collection_features != blank and collection_features.size > 0 %}
          <div class="collection-banner-below__features">
            {% for feature in collection_features %}
              {% if feature.text != blank or feature.icon != blank %}
                <div class="collection-banner-below__feature">
                  {% if feature.icon != blank %}
                    <div class="collection-banner-below__feature-icon">
                      {% liquid
                        # Try to get icon value - could be direct or need .value for file references
                        assign icon_value = feature.icon
                        if feature.icon.value != blank
                          assign icon_value = feature.icon.value
                        endif
                        
                        assign icon_is_image = false
                        
                        # Check if icon is an image/file reference
                        if icon_value.width != blank or icon_value.height != blank
                          assign icon_is_image = true
                        endif
                      %}
                      
                      {% if icon_is_image %}
                        {{
                          icon_value
                          | image_url: width: 54
                          | image_tag: class: 'collection-banner-below__feature-icon-image', alt: feature.text | default: ''
                        }}
                      {% elsif icon_value != blank and icon_value != 'none' %}
                        {% render 'icon-or-image',
                          icon: icon_value,
                          image_upload: null,
                          width: 27,
                          class_name: 'collection-banner-below__feature-icon-svg'
                        %}
                      {% endif %}
                    </div>
                  {% endif %}
                  {% if feature.text != blank %}
                    <span class="collection-banner-below__feature-text">{{ feature.text }}</span>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .collection-banner-below {
    display: flex;
    flex-direction: column;
  }

  .collection-banner-below__image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .collection-banner-below__image-wrapper {
      height: 336px;
    }
  }

  .collection-banner-below__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media screen and (max-width: 749px) {
    .collection-banner-below__image {
      max-height: 382px;
    }
  }

  @media screen and (min-width: 750px) {
    .collection-banner-below__image {
      height: 336px;
      max-height: 336px;
    }
  }

  .collection-banner-below__overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(89.97deg, #000000 -12.75%, rgba(0, 0, 0, 0.810876) -3.35%, rgba(0, 0, 0, 0.648265) 29.36%, rgba(0, 0, 0, 0) 67.56%);
    pointer-events: none;
  }

  @media screen and (max-width: 749px) {
    .collection-banner-below__overlay {
      background: linear-gradient(202.37deg, rgba(0, 0, 0, 0) 23.99%, rgba(0, 0, 0, 0.485081) 38.69%, rgba(0, 0, 0, 0.821329) 102.45%, #000000 127.08%);
    }
  }

  .collection-banner-below__content-wrapper {
    grid-column: 2;
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .collection-banner-below__content {
    width: 100%;
    padding-block: var(--padding-lg);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    gap: 0;
    text-align: center;
  }


  .collection-banner-below__title {
    margin: 0;
    font-weight: 500;
    font-size: 36px;
    line-height: 62.4px;
    margin-bottom: 12px;
    color: #1D425A;
  }

  .collection-banner-below__product-count {
    font-family: Outfit;
    font-weight: 400;
    font-style: normal;
    font-size: 14px;
    line-height: 62.4px;
    letter-spacing: 0%;
    color: #1D425A;
  }

  .collection-banner-below__description {
    font-weight: 400;
    font-size: 16px;
    line-height: 160%;
    max-width: 600px;
    color: #1D425A;
    margin-left: auto;
    margin-right: auto;
  }

  .collection-banner-below__features {
    display: flex;
    flex-wrap: wrap;
    gap: 22px;
    margin-top: 20px;
    justify-content: center;
  }

  .collection-banner-below__feature {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .collection-banner-below__feature-icon {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    color: #1D425A;
  }

  .collection-banner-below__feature-icon-svg {
    width: 27px;
    height: 27px;
  }

  .collection-banner-below__feature-icon-image {
    width: 27px;
    height: 27px;
    object-fit: contain;
  }

  @media screen and (max-width: 749px) {
    .collection-banner-below__features {
      gap: 6px;
    }
    .collection-banner-below__feature-icon-svg {
      width: 24px;
      height: 24px;
    }

    .collection-banner-below__feature-icon-image {
      width: 24px;
      height: 24px;
    }
  }

  .collection-banner-below__feature-text {
    font-weight: 500;
    font-size: 16px;
    line-height: 160%;
    color: #1D425A;
  }

  @media screen and (max-width: 749px) {
    .collection-banner-below {
      height: auto;
    }

    .collection-banner-below__image-wrapper {
      height: 382px;
      max-height: 382px;
    }

    .collection-banner-below__image {
      height: 382px;
    }

    .collection-banner-below__content {
      padding-block: var(--padding-md, 24px);
      padding-block-end: 25px;
    }

    .collection-banner-below__title {
      font-size: 28px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Collection banner below",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        {
          "value": "page-width",
          "label": "Page width"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ],
      "default": "full-width"
    }
  ],
  "presets": [
    {
      "name": "Collection banner below"
    }
  ]
}
{% endschema %}
