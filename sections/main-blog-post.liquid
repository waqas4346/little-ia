

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section color-{{ section.settings.color_scheme }}">
  <div
    class="
      spacing-style
      layout-panel-flex
      layout-panel-flex--column
      section-content-wrapper
      mobile-column
    "
    style="
      {% render 'layout-panel-style', settings: section.settings %}
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    <div class="blog-post-header-row">
      <header class="blog-post-header-content">
        <div class="blog-post-breadcrumbs-wrapper">
          {% render 'blog-breadcrumbs', blog: blog, article: article %}
        </div>
        <div class="blog-post-title-details-wrapper">
          {%- content_for 'block', id: 'blog-post-title', type: 'text' %}
          <div class="blog-post-read-time-wrapper">
            {% render 'blog-read-time', article: article %}
          </div>
          {%- content_for 'block', id: 'blog-post-details', type: '_blog-post-info-text' %}
        </div>
      </header>

      {%- if article.image -%}
        <div class="blog-post-header-image">
          {%- content_for 'block', id: 'blog-post-image', type: '_blog-post-featured-image' %}
        </div>
      {%- endif -%}
    </div>
    <div class="blog-post-content-wrapper">
      <div class="blog-post-content-main">
        {%- content_for 'block', id: 'blog-post-content', type: '_blog-post-content' %}
      </div>
      <div class="blog-post-sidebar">
        {%- comment -%} Recommended Products Section {%- endcomment -%}
        {%- assign recommended_collection = blog.metafields.custom.cb_recommended_products.value -%}
        {%- if recommended_collection != blank -%}
          {%- assign all_products = recommended_collection.products -%}
          {%- if all_products.size > 0 -%}
            {%- liquid
              assign product_count = all_products.size
              assign max_products = 4
              
              # Use timestamp for true randomness on each page load
              # This ensures different products are shown on each refresh
              assign time_seed = 'now' | date: '%s' | plus: 0
            -%}
            
            <div class="blog-post-recommended-products">
              <h2 class="blog-post-recommended-products__title">Explore Our Little IA Products</h2>
              <div class="blog-post-recommended-products__grid">
              {%- if product_count > max_products -%}
                {%- comment -%} Select 4 random products using timestamp-based indices {%- endcomment -%}
                {%- assign selected_count = 0 -%}
                {%- assign used_indices = '' -%}
                
                {%- comment -%} Generate and render 4 unique random products {%- endcomment -%}
                {%- for i in (1..max_products) -%}
                  {%- liquid
                    # Create a unique random index for each product using timestamp
                    assign index_seed = time_seed | plus: i | times: 7 | plus: selected_count | times: 13
                    assign random_index = index_seed | modulo: product_count
                    assign index_str = random_index | append: ','
                    
                    # Simple check: if we've used this index before, try next one
                    if used_indices contains index_str
                      assign random_index = random_index | plus: 1 | modulo: product_count
                      assign index_str = random_index | append: ','
                    endif
                    
                    # Add to used indices string
                    assign used_indices = used_indices | append: index_str
                  -%}
                  
                  {%- comment -%} Find and render the product at this random index {%- endcomment -%}
                  {%- for product in all_products -%}
                    {%- if forloop.index0 == random_index -%}
                      <div class="blog-post-recommended-product">
                        {% content_for 'block', type: '_blog-product-card', id: 'blog-product-card', closest.product: product %}
                      </div>
                      {%- assign selected_count = selected_count | plus: 1 -%}
                      {%- break -%}
                    {%- endif -%}
                  {%- endfor -%}
                {%- endfor -%}
              {%- else -%}
                {%- for product in all_products limit: max_products -%}
                  <div class="blog-post-recommended-product">
                    {% content_for 'block', type: '_blog-product-card', id: 'blog-product-card', closest.product: product %}
                  </div>
                {%- endfor -%}
              {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        {%- endif -%}
        
        <aside class="blog-post-related-posts">
          <h2 class="blog-post-related-posts__title">Other blogs you might want to read</h2>
          <div class="blog-post-related-posts__list">
            {% liquid
              assign related_count = 0
              assign max_related = 3
            %}
            {% for related_article in blog.articles %}
              {% if related_article.id != article.id and related_count < max_related %}
                <div class="blog-post-related-post">
                  {% content_for 'block', id: 'related-blog-post-card', type: '_blog-post-related-card', article: related_article %}
                </div>
                {% assign related_count = related_count | plus: 1 %}
              {% endif %}
            {% endfor %}
          </div>
        </aside>
      </div>
    </div>

    {% comment %} Dynamic area for @app blocks only, at the bottom {% endcomment %}
    {% content_for 'blocks' %}

    {% if blog.comments_enabled? %}
      <div class="blog-post-comments-container">
        <h2 class="h3">{{- 'blogs.article.comments_heading' | t: count: article.comments_count -}}</h2>

        <div class="blog-post-comments">
          {% paginate article.comments by 10 %}
            {% for comment in article.comments %}
              <div class="blog-post-comment">
                {{ comment.content }}
                <div class="blog-post-comment__author">
                  <span class="blog-post-comment__author-name">{{- comment.author -}}</span>
                  <span>{{- 'blogs.article.comment_author_separator' | t -}}</span>
                  <span class="blog-post-comment__date">
                    {{- comment.created_at | time_tag: format: 'date' -}}
                  </span>
                </div>
              </div>
            {% endfor %}

            <div class="blog-post-comments-pagination">
              {{- paginate | default_pagination -}}
            </div>
          {% endpaginate %}
        </div>

        {% render 'blog-comment-form', article: article, section_id: section.id %}
      </div>
    {% endif %}
  </div>
</div>

<script type="application/ld+json">
  {{ article | structured_data }}
</script>


{% stylesheet %}
  .blog-post-header-row {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: var(--gap-xl);
    width: 100%;
  }

  .blog-post-header-content {
    flex: 0 0 auto;
    max-width: 446px;
    min-width: 0;
    display: flex;
    flex-direction: column;
  }

  .blog-post-breadcrumbs-wrapper {
    flex-shrink: 0;
  }

  .blog-post-title-details-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 0;
  }

  .blog-post-read-time-wrapper {
    margin-top: 20px;
    margin-bottom: 16px;
  }

  .blog-post-header-image {
    flex: 1;
    min-width: 0;
  }

  .blog-post-header-image .blog-post-featured-image__image {
    max-height: 410px;
  }

  .blog-post-header-content h1,
  .blog-post-header-content .h1,
  .blog-post-header-content [id*="blog-post-title"] h1,
  .blog-post-header-content .text-block h1,
  .blog-post-header-content .h2 h1,
  .blog-post-title-details-wrapper h1,
  .blog-post-title-details-wrapper .text-block h1 {
    font-weight: 500 !important;
    font-size: 36px !important;
    line-height: 125% !important;
  }

  @media screen and (max-width: 749px) {
    .blog-post-header-content h1,
    .blog-post-header-content .h1,
    .blog-post-header-content [id*="blog-post-title"] h1,
    .blog-post-header-content .text-block h1,
    .blog-post-header-content .h2 h1,
    .blog-post-title-details-wrapper h1,
    .blog-post-title-details-wrapper .text-block h1 {
      font-size: 30px !important;
      line-height: 125% !important;
    }
  }

  .blog-post-content-wrapper {
    display: flex;
    flex-direction: row;
    gap: var(--gap-xl);
    align-items: flex-start;
  }

  .blog-post-content-main {
    flex: 1;
    min-width: 0;
  }

  .blog-post-sidebar {
    flex: 0 0 417px;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 28px;
  }

  @media screen and (max-width: 989px) {
    .blog-post-content-wrapper {
      flex-direction: column;
    }

    .blog-post-content-main {
      width: 100%;
    }

    .blog-post-sidebar {
      flex: 1;
      width: 100%;
    }
  }

  .blog-post-content {
    background-color: #ffffff;
    padding-top: 27px;
    padding-right: 60px;
    padding-bottom: 60px;
    padding-left: 60px;
  }

  @media screen and (max-width: 749px) {
    .blog-post-content {
      padding-left: 0;
      padding-right: 0;
    }
  }

  .blog-post-related-posts {
    width: 100%;
    background-color: #FFFBF4;
    border-radius: 8px;
    padding: 20px 10px;
  }

  .blog-post-related-posts__title {
    font-size: 20px;
    font-weight: 500;
    line-height: 100%;
    margin-bottom: var(--margin-lg);
    border-bottom: 0.5px solid #1D425A;
    padding-bottom: var(--padding-md);
  }

  .blog-post-related-posts__list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .blog-post-related-post {
    width: 100%;
  }

  .blog-post-recommended-products {
    width: 100%;
    background-color: #FFFBF4;
    border-radius: 8px;
    padding: 20px 10px;
  }

  .blog-post-recommended-products__title {
    font-size: 20px;
    font-weight: 500;
    line-height: 100%;
    margin-bottom: var(--margin-lg);
    border-bottom: 0.5px solid #1D425A;
    padding-bottom: var(--padding-md);
  }

  .blog-post-recommended-products__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 18px;
  }

  .blog-post-recommended-product {
    width: 100%;
  }

  /* Custom horizontal layout for blog post product cards */
  .blog-post-recommended-product product-card {
    width: 100%;
  }

  .blog-post-recommended-product .product-card__content {
    flex-direction: row !important;
    align-items: flex-start;
    gap: 12px;
  }

  /* Image/gallery on the left - first child */
  .blog-post-recommended-product .product-card__content > *:first-child {
    flex: 0 0 auto;
    width: 120px;
    min-width: 120px;
    max-width: 120px;
  }

  /* Content wrapper on the right - contains title, price, etc. */
  .blog-post-recommended-product .product-card__content > *:not(:first-child) {
    flex: 1;
    min-width: 0;
  }

  /* Ensure the content wrapper stacks vertically */
  .blog-post-recommended-product .product-card__content > *:not(:first-child) {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  /* Ensure product title and price are on separate rows with gap */
  .blog-post-recommended-product product-title {
    display: block;
    margin-bottom: 8px;
  }

  .blog-post-recommended-product product-price {
    display: block;
    margin-top: 0;
  }

  /* Add gap between title and price */
  .blog-post-recommended-product product-title + product-price {
    margin-top: 8px;
  }

  /* Make sure images fit properly */
  .blog-post-recommended-product .product-card__content > *:first-child img,
  .blog-post-recommended-product .product-card__content > *:first-child picture {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  @media screen and (max-width: 989px) {
    .blog-post-recommended-products__grid {
      grid-template-columns: 1fr;
    }
  }

  @media screen and (max-width: 749px) {
    .blog-post-recommended-product .product-card__content {
      flex-direction: row !important;
      gap: 10px;
    }

    .blog-post-recommended-product .product-card__content > *:first-child {
      width: 100px;
      min-width: 100px;
      max-width: 100px;
    }
  }

  @media screen and (max-width: 749px) {
    .blog-post-content-main {
      width: 100vw;
      margin-left: calc(-1 * var(--page-margin));
      margin-right: calc(-50vw + 50%);
      position: relative;
    }

    .blog-post-sidebar {
      margin-left: 0;
      margin-right: 0;
    }
    .blog-post-header-row {
      flex-direction: column;
    }

    .blog-post-header-content {
      max-width: 100%;
    }

    .blog-post-header-image {
      width: 100%;
      min-width: 0;
    }
  }

  .blog-post-comments-container {
    width: 100%;
    max-width: var(--normal-content-width);
    margin: 0 auto;
  }

  .blog-post-comments {
    display: flex;
    flex-direction: column;
    gap: var(--gap-3xl);
  }

  .blog-post-comment__author {
    display: flex;
    align-items: center;
    gap: var(--gap-2xs);
    margin-top: var(--margin-md);
    font-size: var(--font-size--body-sm);
    color: rgb(var(--color-foreground-rgb) / var(--opacity-subdued-text));
  }

  .blog-post-comments-pagination {
    display: flex;
    justify-content: center;
    gap: var(--gap-2xs);
  }

  .blog-post-comments-pagination,
  .blog-post-comments-pagination a {
    color: var(--color-foreground);
  }

  .blog-post-comments-pagination .current {
    color: var(--color-foreground);
  }

  .blog-post-comments-pagination .current,
  .blog-post-comments-pagination a {
    display: block;
    padding: var(--padding-2xs) var(--padding-xs);
  }

  .blog-post-comments-pagination .current,
  .blog-post-comments-pagination a:hover {
    border-bottom: 1px solid var(--color-foreground);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.blog_post",
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    },
    {
      "type": "_blog-product-card"
    }
  ],
  "class": "section-wrapper",
  "settings": [
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",
          "label": "t:options.vertical"
        }
      ],
      "default": "column",
      "visible_if": "{{ section.settings.gap < 0 }}"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": []
}
{% endschema %}
