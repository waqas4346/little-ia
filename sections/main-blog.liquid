

<script
  src="{{ 'blog-posts-list.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<blog-posts-list section-id="{{ section.id }}" infinite-scroll="{{ section.settings.enable_infinite_scroll }}">
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      color-{{ section.settings.color_scheme }}
      blog-posts
      spacing-style
      size-style
    "
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    
    <div class="blog-posts-header">
      {% content_for 'blocks' %}
    </div>
    

    {%- paginate blog.articles by 12 -%}
      {%- if section.settings.enable_infinite_scroll -%}
        <span ref="viewMorePrevious"></span>
      {%- endif -%}
      <div
        ref="grid"
        class="blog-posts-container"
        data-last-page="{{ paginate.pages }}"
      >
        {% for article in blog.articles %}
          <div
            class="blog-post-item"
            ref="cards[]"
            data-page="{{ paginate.current_page }}"
          >
            {% content_for 'block', id: 'static-blog-post-card', type: '_blog-post-card', article: article %}
          </div>
        {% endfor %}
      </div>
      {%- if section.settings.enable_infinite_scroll -%}
        <span ref="viewMoreNext"></span>
      {%- else -%}
        {%- if paginate.next -%}
          <div class="blog-posts-load-more-wrapper">
            <button
              ref="loadMoreButton"
              type="button"
              class="button blog-posts-load-more-button"
              aria-label="{{ section.settings.load_more_text | default: 'Load more articles' }}"
            >
              {{ section.settings.load_more_text | default: 'Load More' }}
            </button>
          </div>
        {%- endif -%}
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</blog-posts-list>

{% stylesheet %}
  /**
   * Blog posts page layout
   */
  .blog-posts {
    --page-content-width: var(--narrow-page-width);
    --page-width: calc(var(--page-content-width) + (var(--page-margin) * 2));
    --columns-gap: 20px;
    --rows-gap: 48px;

    @media screen and (max-width: 749px) {
      --columns-gap: 9px;
      --rows-gap: 24px;
    }
  }

  .blog-posts-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    width: 100%;
    min-width: 0;
    column-gap: var(--columns-gap);
    row-gap: var(--rows-gap);

    @media screen and (max-width: 749px) {
      /* Prevent overflow from intrinsic min-width content */
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  /**
   * Default layout (desktop): three-column grid
   * +------------+------------+-------------+
   * |            |            |             |
   * |  (span 2)  |  (span 2)  |  (span 2)   |
   * |            |            |             |
   * +------------+------------+-------------+
   */
  .blog-post-item {
    --blog-post-card-scale: 0.7;

    grid-column: span 2;
    min-width: 0;

    @media screen and (max-width: 749px) {
      --blog-post-card-scale: 0.27;

      /* Mobile: two columns by default (2 posts per row) */
      grid-column: span 1;
    }
  }

  /**
   * First row (desktop): two columns
   * +-------------------+-------------------+
   * |                   |                   |
   * |  (column span 3)  |  (column span 3)  |
   * |                   |                   |
   * +-------------------+-------------------+
   */
  .blog-post-item:nth-child(-n + 2) {
    --blog-post-card-scale: 1;

    grid-column: span 3;

    @media screen and (max-width: 749px) {
      --blog-post-card-scale: 0.5;

      /* Mobile: first two posts are full width (one per row) */
      grid-column: 1 / -1;
    }
  }

  /* If there's only one post, make it full width on desktop too. */
  .blog-post-item:first-child:last-child {
    grid-column: 1 / -1;
  }

  /**
   * When there's no image, the blog post item has a border.
   */
  .blog-post-item {
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-20));
    padding: 0 1rem 1rem;
  }

  .blog-post-item:has(.blog-post-card__image-container) {
    border: none;
    padding: 0;
  }

  .blog-posts-header {
    min-width: 0;
  }

  .blog-posts-load-more-wrapper {
    display: flex;
    justify-content: center;
    padding: var(--padding-xl, 24px) 0;
    margin-top: var(--padding-xl, 24px);
  }

  .blog-posts-header .text-block p {
    font-size: 32px;
    line-height: 120%;
    font-weight: 500;
  }

  @media screen and (max-width: 749px) {
    .blog-posts-header .text-block p {
      font-size: 24px;
    }
  }

  .blog-posts .text-block {
    font-weight: 500;
    line-height: 120%;
    font-size: 16px;
  }

  .blog-posts .blog-post-item:nth-child(-n + 2) .text-block {
    font-size: 20px;
  }

  @media screen and (min-width: 750px) {
    .blog-posts .text-block {
      font-size: 24px;
    }

    .blog-posts .blog-post-item:nth-child(-n + 2) .text-block {
      font-size: 28px;
    }
  }
{% endstylesheet %}

