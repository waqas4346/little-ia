
<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section page-width-content color-{{ section.settings.color_scheme }}">
  <div
    class="promise-section spacing-style"
    style="{% render 'spacing-padding', settings: section.settings %}"
  >
    <div class="promise-section__heading-wrapper">
      {% if section.settings.heading_icon_left != 'none' or section.settings.heading_image_left != blank %}
        <div class="promise-section__icon promise-section__icon--heading-left">
          {% render 'icon-or-image',
            icon: section.settings.heading_icon_left,
            image_upload: section.settings.heading_image_left,
            width: section.settings.heading_icon_size,
            class_name: 'promise-section__icon-svg'
          %}
        </div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="promise-section__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.heading_icon_right != 'none' or section.settings.heading_image_right != blank %}
        <div class="promise-section__icon promise-section__icon--heading-right">
          {% render 'icon-or-image',
            icon: section.settings.heading_icon_right,
            image_upload: section.settings.heading_image_right,
            width: section.settings.heading_icon_size,
            class_name: 'promise-section__icon-svg'
          %}
        </div>
      {% endif %}
    </div>

    <div class="promise-section__subheading-wrapper">
      {% if section.settings.subheading_icon_left != 'none' or section.settings.subheading_image_left != blank %}
        <div class="promise-section__icon promise-section__icon--subheading-left">
          {% render 'icon-or-image',
            icon: section.settings.subheading_icon_left,
            image_upload: section.settings.subheading_image_left,
            width: section.settings.subheading_icon_size,
            class_name: 'promise-section__icon-svg'
          %}
        </div>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="promise-section__subheading">{{ section.settings.subheading }}</div>
      {% endif %}

      {% if section.settings.subheading_icon_right != 'none' or section.settings.subheading_image_right != blank %}
        <div class="promise-section__icon promise-section__icon--subheading-right">
          {% render 'icon-or-image',
            icon: section.settings.subheading_icon_right,
            image_upload: section.settings.subheading_image_right,
            width: section.settings.subheading_icon_size,
            class_name: 'promise-section__icon-svg'
          %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .promise-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 60px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .promise-section__heading-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    gap: 20px;
  }

  .promise-section__heading {
    margin: 0;
    font-family: 'Sacramento', cursive, serif;
    font-style: normal;
    font-weight: 400;
    text-align: center;
    letter-spacing: -0.02em;
    color: #7295BB;
    z-index: 1;
    position: relative;
  }

  .promise-section__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
  }

  .promise-section__icon-svg,
  .promise-section__icon img {
    width: 100%;
    height: auto;
    display: block;
  }

  .promise-section__subheading-wrapper {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    position: relative;
    gap: 20px;
  }

  .promise-section__subheading {
    font-family: 'Outfit', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-style: normal;
    font-weight: 400;
    text-align: center;
    letter-spacing: -0.02em;
    color: #1D425A;
    flex: 1;
    margin: 0;
    position: relative;
    z-index: 1;
  }

  .promise-section__subheading p {
    margin: 0;
  }

  /* Desktop styles */
  @media (min-width: 769px) {
    .promise-section {
      gap: 10px;
    }

    .promise-section__heading-wrapper {
      width: 720px;
      margin: 0 auto;
    }

    .promise-section__heading {
      font-size: 38px;
      line-height: 32px;
    }

    .promise-section__subheading-wrapper {
      width: 720px;
      margin: 0 auto;
      align-items: center;
      min-height: 100px;
      padding-bottom: 50px;
    }

    .promise-section__subheading {
      font-size: 22px;
      line-height: 140%;
      width: 100%;
      margin-bottom: 0;
    }

    .promise-section__icon--heading-left {
      position: absolute;
      left: 50px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 0;
      pointer-events: none;
    }

    .promise-section__icon--heading-right {
      position: absolute;
      right: 50px;
      top: 50%;
      transform: translateY(-50%);
      z-index: 0;
      pointer-events: none;
    }

    .promise-section__icon--subheading-left {
      position: absolute;
      left: -120px;
      bottom: 54px;
      z-index: 0;
      pointer-events: none;
    }

    .promise-section__icon--subheading-right {
      position: absolute;
      right: -74px;
      bottom: 45px;
      z-index: 0;
      pointer-events: none;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .promise-section {
      gap: 6px;
      padding: 40px 10px;
    }

    .promise-section__heading-wrapper {
      width: 100%;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0 100px;
      min-height: 60px;
    }

    .promise-section__heading {
      font-size: 30px;
      line-height: 44px;
      position: relative;
      display: inline-block;
      z-index: 1;
      padding: 0 20px;
    }

    .promise-section__subheading {
      font-size: 16px;
      line-height: 160%;
      position: relative;
      width: 100%;
      margin-bottom: 0;
    }

    .promise-section__subheading-wrapper {
      width: 100%;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 120px;
    }

    .promise-section__icon--heading-left {
      position: absolute;
      right: calc(50% + 49px);
      top: 50%;
      transform: translateY(-50%);
      z-index: 0;
      pointer-events: none;
      left: 0;
    }

    .promise-section__icon--heading-right {
      position: absolute;
      left: calc(50% + 55px);
      top: 50%;
      transform: translateY(-50%);
      z-index: 0;
      pointer-events: none;
      right: 0;
    }

    .promise-section__icon--subheading-left {
      position: absolute;
      bottom: -10px;
      left: 50%;
      z-index: 0;
      pointer-events: none;
      left: 0;
    }

    .promise-section__icon--subheading-right {
      position: absolute;
      bottom: -10px;
      margin-left: 8px;
      z-index: 0;
      right: 0;
      pointer-events: none;
    }
  }
{% endstylesheet %}

