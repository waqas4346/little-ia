<div class="image_grid">
  <div class="page-width">
    <div class="image_grid_content">
      {%- if section.settings.description != blank -%}
        <div class="header_block">
          {%- if section.settings.description != blank -%}
            <p>{{ section.settings.description }}</p>
          {%- endif -%}
        </div>
      {%- endif -%}
      <div class="custom_image_grid">
        {%- for block in section.blocks -%}
          <div class="image_block">
            {%- if block.settings.block_link != blank -%}
            <a href="{{ block.settings.block_link }}">
            {%- endif -%}
              {%- if block.settings.image != blank -%}
                <div class="image_main_grid">
                  <div class="custom_image">
                    <img src="{{ block.settings.image | img_url: '2048x2048' }}">
                  </div>
                </div>
              {%- endif -%}
              {%- if block.settings.block_title != blank or block.settings.block_description != blank -%}
                <div class="block_info">
                  {%- if block.settings.block_title != blank -%}
                    <h1>{{ block.settings.block_title }}</h1>
                  {%- endif -%}
                  {%- if block.settings.block_price != blank -%}
                    <span>Rs. {{ block.settings.block_price }}</span>
                  {%- endif -%}
                  {%- if block.settings.block_description != blank -%}
                    <p>{{ block.settings.block_description }}</p>
                  {%- endif -%}
                  <div class="right_content personalized">
                    <h4><img src="https://cdn.shopify.com/s/files/1/0289/3240/7375/files/sewing_medium.png?v=1645017791" style="width: 16px;margin: auto 3px;vertical-align:middle;">&nbsp; PERSONALISE ME</h4>
                  </div>
                </div>
              {%- endif -%}
            {%- if block.settings.block_link != blank -%}
            </a>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Image Grid",
    "settings": [
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "block",
        "name": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "block_title",
            "label": "Block Title"
          },
          {
            "type": "text",
            "id": "block_price",
            "label": "Block Price"
          },
          {
            "type": "textarea",
            "id": "block_description",
            "label": "Description"
          },
          {
            "type": "url",
            "id": "block_link",
            "label": "Link"
          }
        ]
      }
	]
  }
{% endschema %}