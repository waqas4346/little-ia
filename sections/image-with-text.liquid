
{% liquid
  # Determine image position
  assign image_position = section.settings.image_position | default: 'left'
  assign image_first = true
  if image_position == 'right'
    assign image_first = false
  endif
  
  # Determine mobile image position
  assign mobile_image_position = section.settings.mobile_image_position | default: 'below'
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    gap-style
    image-with-text-section
  "
  style="
    {%- render 'spacing-style', settings: section.settings -%}
    {%- render 'gap-style', value: section.settings.gap -%}
  "
>
  {% if section.settings.section_heading != blank or section.settings.section_subheading != blank %}
    <div class="image-with-text-section__header">
      {% if section.settings.section_heading != blank %}
        <h2 class="image-with-text-section__heading">{{ section.settings.section_heading }}</h2>
      {% endif %}
      {% if section.settings.section_subheading != blank %}
        <div class="image-with-text-section__subheading rte">
          {{ section.settings.section_subheading }}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="image-with-text image-with-text--image-{{ image_position }} image-with-text--mobile-image-{{ mobile_image_position }}">
    {% if image_first %}
      {% if section.settings.image != blank %}
        <div class="image-with-text__image">
          {{
            section.settings.image
            | image_url: width: 1200
            | image_tag:
              class: 'image-with-text__image-img',
              loading: 'lazy',
              sizes: '(min-width: 750px) 50vw, 100vw',
              widths: '240, 352, 832, 1200'
          }}
          {% if section.settings.image_overlay_text != blank %}
            <div class="image-with-text__overlay-text rte">
              {{ section.settings.image_overlay_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endif %}

    <div class="image-with-text__text">
      {% if section.settings.heading != blank %}
        <h2 class="image-with-text__heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.body != blank %}
        <div class="image-with-text__body rte">
          {{ section.settings.body }}
        </div>
      {% endif %}
    </div>

    {% unless image_first %}
      {% if section.settings.image != blank %}
        <div class="image-with-text__image">
          {{
            section.settings.image
            | image_url: width: 1200
            | image_tag:
              class: 'image-with-text__image-img',
              loading: 'lazy',
              sizes: '(min-width: 750px) 50vw, 100vw',
              widths: '240, 352, 832, 1200'
          }}
          {% if section.settings.image_overlay_text != blank %}
            <div class="image-with-text__overlay-text rte">
              {{ section.settings.image_overlay_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    {% endunless %}
  </div>
</div>

{% stylesheet %}
  .image-with-text-section {
    width: 100%;
  }

  .image-with-text-section__header {
    width: 100%;
    margin-bottom: 12px;
    text-align: center;
  }

  .image-with-text-section__heading {
    margin: 0;
    margin-bottom: 8px;
    font-weight: 500;
    font-size: 28px;
    line-height: 100%;
  }

  .image-with-text-section__subheading {
    font-weight: 400;
    font-size: 14px;
    line-height: 140%;
    margin: 0 auto;
    max-width: 430px;
  }

  .image-with-text-section__subheading p:first-child {
    margin-top: 0;
  }

  .image-with-text-section__subheading p:last-child {
    margin-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .image-with-text-section__header {
      margin-bottom: 12px;
    }

    .image-with-text-section__heading {
      font-size: 32px;
      line-height: 100%;
      margin-bottom: 16px;
    }

    .image-with-text-section__subheading {
      font-size: 16px;
      line-height: 140%;
    }
  }

  .image-with-text {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .image-with-text__image {
    position: relative;
    width: 100%;
  }

  .image-with-text__image-img {
    width: 100%;
    max-height: 474px;
    object-fit: cover;
    display: block;
    border-radius: var(--border-radius, 0);
  }

  .image-with-text__overlay-text {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #1D425AB2;
    font-weight: 500;
    font-size: 16px;
    line-height: 100%;
    z-index: 2;
    text-align: center;
    width: calc(100% - 40px);
    max-width: 100%;
  }

  .image-with-text__text {
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .image-with-text--mobile-image-above .image-with-text__image {
      order: 1;
    }

    .image-with-text--mobile-image-below .image-with-text__image {
      order: 2;
    }

    .image-with-text--mobile-image-above .image-with-text__text {
      order: 2;
    }

    .image-with-text--mobile-image-below .image-with-text__text {
      order: 1;
    }
  }

  .image-with-text__heading {
    margin: 0;
    margin-bottom: 8px;
    font-weight: 500;
    font-size: 28px;
    line-height: 146%;
  }

  .image-with-text__body {
    width: 100%;
    font-weight: 400;
    font-size: 16px;
    line-height: 150%;
  }

  .image-with-text__body p:first-child {
    margin-top: 0;
  }

  .image-with-text__body p:last-child {
    margin-bottom: 0;
  }

  @media screen and (min-width: 750px) {
    .image-with-text {
      flex-direction: row;
      align-items: center;
      gap: 52px;
    }

    .image-with-text__image {
      flex: 0 0 auto;
      width: 50%;
      max-width: 623px;
      order: 1;
      margin-right: auto;
    }

    .image-with-text__text {
      flex: 1;
      min-width: 0;
      order: 2;
    }

    .image-with-text__heading {
      font-size: 28px;
      margin-bottom: 24px;
    }

    .image-with-text--image-right .image-with-text__image {
      order: 2;
      margin-right: 0;
      margin-left: auto;
    }

    .image-with-text--image-right .image-with-text__text {
      order: 1;
    }
  }
{% endstylesheet %}

