
{% liquid
  # Get USPs section metaobject from collection or product metafield
  assign usp_section = blank
  assign section_usps = blank
  assign section_heading = blank
  assign section_subheading = blank
  
  assign metafield_namespace = section.settings.metafield_namespace | default: 'custom'
  assign metafield_key = section.settings.metafield_key | default: 'cb_usps'
  
  # Try collection metafield first
  if collection != blank
    assign usp_metafield = collection.metafields[metafield_namespace][metafield_key]
    
    if usp_metafield != blank
      assign usp_section = usp_metafield.value
      
      if usp_section != blank
        assign section_heading = usp_section.heading.value | default: usp_section.heading
        assign section_subheading = usp_section.sub_heading.value | default: usp_section.sub_heading
        assign section_usps = usp_section.usps.value | default: usp_section.usps
      endif
    endif
  endif
  
  # Try product metafield if collection didn't have it
  if usp_section == blank and product != blank
    assign usp_metafield = product.metafields[metafield_namespace][metafield_key]
    
    if usp_metafield != blank
      assign usp_section = usp_metafield.value
      
      if usp_section != blank
        assign section_heading = usp_section.heading.value | default: usp_section.heading
        assign section_subheading = usp_section.sub_heading.value | default: usp_section.sub_heading
        assign section_usps = usp_section.usps.value | default: usp_section.usps
      endif
    endif
  endif

  # Determine max items
  if section_usps != blank
    # Check if it's a list (has .count) or single metaobject
    if section_usps.count and section_usps.count > 0
      assign max_items = section_usps.count
    elsif section_usps.count == 0
      # Empty list
      assign section_usps = blank
      assign max_items = section.settings.usp_limit
    else
      # Single metaobject
      assign max_items = 1
    endif
  else
    assign max_items = section.settings.usp_limit
  endif
%}

{% if section_usps != blank %}
<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {%- render 'spacing-style', settings: section.settings -%}
    {%- render 'gap-style', value: section.settings.gap -%}
  "
>
  {% comment %} Use heading from metaobject if available, otherwise use section settings {% endcomment %}
  {% assign display_heading = section_heading | default: section.settings.heading %}
  {% assign display_subheading = section_subheading | default: section.settings.subheading %}
  
  {% if display_heading != blank or display_subheading != blank %}
    <div class="usps-header">
      {% if display_heading != blank %}
        <h2 class="usps-heading">{{ display_heading }}</h2>
      {% endif %}
      {% if display_subheading != blank %}
        <p class="usps-subheading">{{ display_subheading }}</p>
      {% endif %}
    </div>
  {% endif %}
  

  {% capture list_items %}
    {% comment %} Handle both single metaobject and list of metaobjects {% endcomment %}
    {% if section_usps.count > 0 %}
      {% comment %} List of cb_card metaobjects {% endcomment %}
      {% for usp_card in section_usps limit: max_items %}
        <div class="resource-list__item">
          {% content_for 'block', id: 'static-usp-card', type: '_usp-card', closest.metaobject.cb_card: usp_card %}
        </div>
        {% unless forloop.last %}
          <!--@list/split-->
        {% endunless %}
      {% endfor %}
    {% else %}
      {% comment %} Single cb_card metaobject {% endcomment %}
      <div class="resource-list__item">
        {% content_for 'block', id: 'static-usp-card', type: '_usp-card', closest.metaobject.cb_card: section_usps %}
      </div>
    {% endif %}
  {% endcapture %}

  {% liquid
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  {% render 'resource-list',
    list_items: list_items,
    list_items_array: list_items_array,
    settings: section.settings,
    carousel_ref: 'featuredUSPs',
    slide_count: max_items,
    content_type: 'products',
    test_id: 'usps-grid'
  %}
</div>
{% endif %}

{% stylesheet %}
  /* Override min() function for row gap to use exact value */
  .usps .resource-list--grid {
    --resource-list-row-gap: var(--resource-list-row-gap-desktop);
  }

  .usps-header {
    margin-bottom: 16px;
    text-align: center;
    max-width: 924px;
    margin-left: auto;
    margin-right: auto;
  }

  .usps-heading {
    margin: 0;
    font-family: 'Sacramento', cursive, sans-serif;
    font-weight: 400;
    font-size: 30px;
    line-height: 150%;
    color: #7295BB;
    text-align: center;
    text-transform: lowercase;
    max-width: 924px;
  }

  .usps-subheading {
    margin: 0;
    font-family: 'FuturaPT-Demi', 'Outfit', sans-serif;
    font-weight: 500;
    font-size: 28px;
    line-height: 150%;
    text-transform: lowercase;
    color: #1D425A;
    text-align: center;
    max-width: 924px;
  }

  @media screen and (min-width: 750px) {
    .usps-header {
      margin-bottom: 24px;
    }

    .usps-heading {
      font-size: 38px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "USPs",
  "tag": "section",
  "enabled_on": {
    "templates": ["collection", "product"]
  },
  "class": "usps",
  "blocks": [
    {
      "type": "_usp-card"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "header",
      "content": "Metafield Settings"
    },
    {
      "type": "text",
      "id": "metafield_namespace",
      "label": "Metafield Namespace",
      "default": "custom",
      "info": "The namespace of the collection or product metafield (e.g., 'custom', 'cb')"
    },
    {
      "type": "text",
      "id": "metafield_key",
      "label": "Metafield Key",
      "default": "cb_usps",
      "info": "The key of the collection or product metafield containing the USP metaobjects"
    },
    {
      "type": "range",
      "id": "usp_limit",
      "label": "USP Count (for placeholder)",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 3,
      "info": "Used when no USPs are found in collection metafield"
    },
    {
      "type": "header",
      "content": "t:content.cards_layout"
    },
    {
      "type": "select",
      "id": "layout_type",
      "label": "t:settings.layout_type",
      "options": [
        {
          "value": "grid",
          "label": "t:options.grid"
        },
        {
          "value": "carousel",
          "label": "t:options.carousel"
        },
        {
          "value": "editorial",
          "label": "t:options.editorial"
        }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "carousel_on_mobile",
      "label": "t:settings.carousel_on_mobile",
      "default": true,
      "visible_if": "{{ section.settings.layout_type != 'carousel' }}"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "t:settings.columns",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 3,
      "visible_if": "{{ section.settings.layout_type == 'grid' or section.settings.layout_type == 'carousel' }}"
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "label": "t:settings.mobile_columns",
      "options": [
        {
          "value": "1",
          "label": "t:options.one_number"
        },
        {
          "value": "2",
          "label": "t:options.two_number"
        }
      ],
      "default": "2",
      "visible_if": "{{ section.settings.layout_type == 'grid' and section.settings.carousel_on_mobile == false }}"
    },
    {
      "type": "select",
      "id": "mobile_card_size",
      "label": "t:settings.mobile_card_size",
      "options": [
        {
          "value": "60cqw",
          "label": "t:options.one_number"
        },
        {
          "value": "44cqw",
          "label": "t:options.two_number"
        }
      ],
      "default": "60cqw",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "range",
      "id": "columns_gap",
      "label": "t:settings.horizontal_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16,
      "visible_if": "{{ section.settings.layout_type == 'grid' or section.settings.layout_type == 'carousel' }}"
    },
    {
      "type": "range",
      "id": "rows_gap",
      "label": "t:settings.vertical_gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 16,
      "visible_if": "{{ section.settings.layout_type == 'grid' }}"
    },
    {
      "type": "header",
      "content": "t:content.carousel_navigation",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "select",
      "id": "icons_style",
      "label": "t:settings.icon",
      "options": [
        {
          "value": "arrow",
          "label": "t:options.arrows"
        },
        {
          "value": "chevron",
          "label": "t:options.chevrons"
        },
        {
          "value": "arrows_large",
          "label": "t:options.arrows_large"
        },
        {
          "value": "chevron_large",
          "label": "t:options.chevron_large"
        },
        {
          "value": "blue_arrows",
          "label": "Blue arrows"
        },
        {
          "value": "none",
          "label": "t:options.none"
        }
      ],
      "default": "arrow",
      "visible_if": "{{ section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "select",
      "id": "icons_shape",
      "label": "t:settings.icon_background",
      "options": [
        {
          "value": "none",
          "label": "t:options.none"
        },
        {
          "value": "circle",
          "label": "t:options.circle"
        },
        {
          "value": "square",
          "label": "t:options.square"
        }
      ],
      "default": "none",
      "visible_if": "{{ section.settings.icons_style != 'none' and section.settings.layout_type == 'carousel' or section.settings.carousel_on_mobile == true }}"
    },
    {
      "type": "header",
      "content": "t:content.section_layout"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "t:settings.gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "t:settings.top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "t:settings.bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "USPs: Grid",
      "category": "t:categories.storytelling",
      "blocks": {
        "static-usp-card": {
          "type": "_usp-card",
          "name": "USP Card",
          "static": true,
          "settings": {}
        }
      },
      "settings": {
        "layout_type": "grid",
        "carousel_on_mobile": false,
        "columns": 3,
        "mobile_columns": "2",
        "columns_gap": 8,
        "rows_gap": 8,
        "gap": 12,
        "padding-block-start": 48,
        "padding-block-end": 48
      }
    }
  ]
}
{% endschema %}

